<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tip_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvw_title"
        style="?attr/channelTextSelectAttr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/txt_kind_tips"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvw_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/clr_purple_12"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="@string/txt_kind_tips" />

    <TextView
        android:id="@+id/tvw_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="下载失败，请点击确定下载更新"
        android:textColor="@color/clr_orange_06"
        android:textSize="15sp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvw_msg2"
        style="?attr/textPrimaryAttr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fadeScrollbars="false"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="这是内容 长的4行52字这是内容"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_tvw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tvw_left"
            style="?attr/btn_short_cancel_attr"
            android:layout_marginEnd="20dp"
            android:text="@string/txt_cancel" />

        <TextView
            android:id="@+id/tvw_right"
            style="?attr/btn_short_attr"
            android:text="@string/txt_confirm" />
    </LinearLayout>

</LinearLayout>