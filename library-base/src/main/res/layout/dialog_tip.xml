<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivw_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
           android:background="@mipmap/cm_dialog_bg"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_empty"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:background="@color/clr_transparent"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg" />

        <ImageView
            android:id="@+id/ivw_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cm_dialog_bell"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivw_empty" />

        <ImageView
            android:id="@+id/ivw_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@mipmap/cm_ic_close"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.796"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivw_bg" />

        <TextView
            android:id="@+id/tvw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/txt_kind_tips"
            android:textColor="@color/clr_txt_white_cm"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toTopOf="@id/ivw_bg" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@id/layout_tvw"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toBottomOf="@id/tvw_title">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvw_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/clr_txt_white_cm"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@id/ivw_bg"
                    app:layout_constraintStart_toStartOf="@id/ivw_bg"
                    app:layout_constraintTop_toBottomOf="@id/tvw_title"
                    tools:text="这是内容  这是内容这是内容这是内容这是内容这是内容" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/tvw_msg2"
            style="@style/style_cm_tip_small_orange"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="24dp"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@color/clr_grey_60"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/layout_tvw"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toBottomOf="@id/tvw_title"
            tools:text="这是内容 长的4行52字"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_tvw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="46dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/ivw_bg"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg">

            <TextView
                android:id="@+id/tvw_left"
                style="@style/style_btn"
                android:text="@string/txt_cancel"
                android:textColor="@color/clr_txt_white_cm"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvw_right"
                style="@style/style_btn"
                android:text="@string/txt_confirm"
                android:textColor="@color/clr_txt_white_cm"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>