<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fastest_tip_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/icon_fastest_tip_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/fastest_tip_bg"
        app:layout_constraintBottom_toBottomOf="@id/fastest_tip_bg"
        app:layout_constraintStart_toStartOf="@id/fastest_tip_bg"
        app:layout_constraintEnd_toEndOf="@id/fastest_tip_bg">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.17" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.83" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <TextView
            android:id="@+id/fastest_tip_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_fastest_tip"
            android:textSize="12sp"
            android:textColor="@color/clr_txt_07"
            android:gravity="center"
            app:layout_constrainedWidth="true"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="@id/guide4"
            app:layout_constraintBottom_toBottomOf="@id/guide5"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintEnd_toEndOf="@id/guide2"/>

        <TextView
            android:id="@+id/fastest_tip_cancle"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="忽略"
            android:textSize="12sp"
            android:textColor="@color/clr_txt_08"
            android:background="@mipmap/fastest_tip_left_btn_bg"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fastest_tip_content"
            app:layout_constraintBottom_toBottomOf="@id/guide5"
            app:layout_constraintStart_toStartOf="@id/guide1"
            app:layout_constraintEnd_toEndOf="@id/guide3"/>

        <TextView
            android:id="@+id/fastest_tip_change"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:text="切换"
            android:textSize="12sp"
            android:textColor="@color/clr_white"
            android:background="@mipmap/fastest_tip_right_btn_bg"
            android:gravity="center"
            android:layout_marginTop="5dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/fastest_tip_content"
            app:layout_constraintBottom_toBottomOf="@id/guide5"
            app:layout_constraintStart_toStartOf="@id/guide3"
            app:layout_constraintEnd_toEndOf="@id/guide2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>