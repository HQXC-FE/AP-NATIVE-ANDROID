<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.xtree.base.widget.lottery.LotteryPickViewModel" />

    </data>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pick_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        itemData="@{model.datas}"
        itemViewType="@{model.itemType}"
        layoutManager="@{model.layoutManager}"
        onBindListener="@{model.onBindListener}"
        android:overScrollMode="never"/>
</layout>