<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin">

    <LinearLayout
        android:id="@+id/ll_day_start"
        style="@style/style_filter_info_row">

        <TextView
            style="@style/style_filter_info_title"
            android:text="@string/txt_date_start" />

        <TextView
            android:id="@+id/tvw_day_start"
            style="@style/style_filter_info_value"
            tools:text="2023-07-11" />
    </LinearLayout>

    <LinearLayout style="@style/style_filter_info_div_row">

        <TextView style="@style/style_filter_info_div_left" />

        <View style="@style/style_filter_info_dividing" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_day_end"
        style="@style/style_item_ll_row">

        <TextView
            style="@style/style_filter_info_title"
            android:text="@string/txt_date_end" />

        <TextView
            android:id="@+id/tvw_day_end"
            style="@style/style_filter_info_value"
            tools:text="2023-07-11" />
    </LinearLayout>

    <LinearLayout style="@style/style_filter_info_div_row">

        <TextView style="@style/style_filter_info_div_left" />

        <View style="@style/style_filter_info_dividing" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type"
        style="@style/style_item_ll_row">

        <TextView
            android:id="@+id/tvw_type_title"
            style="@style/style_filter_info_title"
            android:text="@string/txt_type" />

        <TextView
            android:id="@+id/tvw_type"
            style="@style/style_filter_info_spn"
            tools:text="全部" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_div"
        style="@style/style_filter_info_div_row">

        <TextView style="@style/style_filter_info_div_left" />

        <View style="@style/style_filter_info_dividing" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_type2"
        style="@style/style_item_ll_row"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvw_type_title2"
            style="@style/style_filter_info_title"
            android:text="@string/txt_type" />

        <TextView
            android:id="@+id/tvw_type2"
            style="@style/style_filter_info_spn"
            tools:text="全部" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_div2"
        style="@style/style_filter_info_div_row"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView style="@style/style_filter_info_div_left" />

        <View style="@style/style_filter_info_dividing" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_status"
        style="@style/style_item_ll_row">

        <TextView
            android:id="@+id/tvw_status_title"
            style="@style/style_filter_info_title"
            android:text="@string/txt_status" />

        <TextView
            android:id="@+id/tvw_status"
            style="@style/style_filter_info_spn"
            tools:text="所有" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_div_status"
        style="@style/style_filter_info_div_row">

        <TextView style="@style/style_filter_info_div_left" />

        <View style="@style/style_filter_info_dividing" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvw_select"
        style="?attr/btn_small_attr"
        android:layout_width="305dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginEnd="0dp"
        android:minEms="3"
        android:text="@string/txt_query"
        android:textSize="14sp" />

</LinearLayout>