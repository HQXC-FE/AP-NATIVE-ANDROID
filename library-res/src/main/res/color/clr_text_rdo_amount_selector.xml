<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下时的字体颜色 -->
    <item android:color="@color/clr_main" android:state_pressed="true" />
    <!-- 选中时的字体颜色 -->
    <item android:color="@color/clr_white" android:state_selected="true" />
    <item android:color="@color/clr_white" android:state_checked="true" />
    <!-- 禁用时的字体颜色 -->
    <item android:color="@color/clr_txt_grey_09" android:state_enabled="false" />
    <!-- 默认 -->
    <item android:color="@color/clr_black" />
</selector>