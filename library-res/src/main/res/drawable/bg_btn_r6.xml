<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/clr_btn_press" />
            <stroke android:width="1dp"
                android:color="@color/clr_btn_press" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_btn_grey01" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270"
                android:endColor="@color/clr_bg_recharge_start"
                android:startColor="@color/clr_bg_recharge_start" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>