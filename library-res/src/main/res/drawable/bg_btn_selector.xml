<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="0"
                android:endColor="@color/clr_bg_frame_small_3"
                android:startColor="@color/clr_bg_frame_23" />
            <corners android:radius="10dp" />
            <solid android:color="@color/clr_bg_frame_small_2" />
            <stroke android:width="1dp"
                android:color="@color/clr_bg_frame_small_2" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="0"
                android:endColor="@color/clr_btn_grey02"
                android:startColor="@color/clr_btn_grey01" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="0"
                android:endColor="@color/clr_btn_02"
                android:startColor="@color/clr_btn_01" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>