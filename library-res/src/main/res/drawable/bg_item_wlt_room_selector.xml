<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="180"
                android:endColor="@color/clr_blue_03"
                android:startColor="@color/clr_blue_04" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="180"
                android:endColor="@color/clr_blue_03"
                android:startColor="@color/clr_blue_04" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="16dp" />
            <gradient
                android:angle="0"
                android:endColor="@color/clr_gray_9"
                android:startColor="@color/clr_gray_7" />
        </shape>
    </item>
</selector>