<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/clr_purple_bg_023" />
            <stroke android:width="1dp" android:color="@color/clr_purple_08" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/clr_purple_bg_023" />
            <stroke android:width="1dp" android:color="@color/clr_purple_bg_021" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="16dp" />
            <solid android:color="@color/clr_gray_30" />
            <stroke android:width="1dp" android:color="@color/clr_gray_30" />
        </shape>
    </item>
</selector>