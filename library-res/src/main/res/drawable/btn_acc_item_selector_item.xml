<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="360"
                android:endColor="@color/clr_main_end"
                android:startColor="@color/clr_main_start" />
            <corners android:radius="88dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="360"
                android:endColor="@color/clr_main_05"
                android:startColor="@color/clr_main_05" />
            <corners android:radius="88dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="360"
                android:endColor="@color/clr_main_05"
                android:startColor="@color/clr_main_05" />
            <corners android:radius="88dp" />
        </shape>
    </item>
</selector>