<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/clr_txt_right_dark_end" />
            <stroke android:width="2dp" android:color="@color/clr_withdrawal_btn_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                android:endColor="@color/clr_txt_right_dark_end"
                android:startColor="@color/clr_txt_right_dark_end" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/clr_gray_9" />
            <stroke android:width="2dp"
                android:color="@color/clr_gray_9" />
        </shape>
    </item>
</selector>