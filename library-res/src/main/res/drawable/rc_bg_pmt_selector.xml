<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_txt_right_dark_end" />
            <stroke android:width="1dp"
                android:color="@color/clr_btn_rc_amount_border" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                android:endColor="@color/clr_txt_right_dark_end"
                android:startColor="@color/clr_txt_right_dark_end" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp"
                android:color="@color/clr_btn_rc_amount_border" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_txt_right_dark_end" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/clr_txt_edittext_input_stroke" />
            <stroke android:width="1dp"
                android:color="@color/clr_btn_rc_amount_border" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>