<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/clr_main_start"
                android:endColor="@color/clr_main_end" />

            <corners android:radius="78dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/clr_white" />
            <stroke android:color="@color/clr_btn_stroke" android:width="1dp"/>
            <corners android:radius="78dp" />
        </shape>
    </item>
</selector>