<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient android:endColor="@color/primaryVariant" android:startColor="@color/primaryColor" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <gradient android:endColor="@color/primaryVariant"
                android:startColor="@color/primaryColor" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="40dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp"
                android:color="@color/strokeDialogColor" />
        </shape>
    </item>
</selector>