<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                android:centerColor="@color/clr_purple_00"
                android:endColor="@color/clr_purple_00"
                android:startColor="@color/clr_purple_00" />
            <corners android:radius="8dp" />
            <solid android:color="@color/clr_purple_bg_023" />
            <stroke android:width="1dp"
                android:color="@color/clr_purple_08" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270"
                android:endColor="@color/clr_purple_00"
                android:startColor="@color/clr_purple_53" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:centerColor="@color/clr_purple_bg03"
                android:endColor="@color/clr_purple_bg05"
                android:startColor="@color/clr_purple_bg01" />
            <corners android:radius="8dp"  />
        </shape>
    </item>
</selector>