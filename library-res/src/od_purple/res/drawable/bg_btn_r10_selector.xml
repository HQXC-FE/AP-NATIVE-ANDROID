<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@color/primaryColor" />
            <stroke android:width="1dp" android:color="@color/strokeColor" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="@color/clr_purple_00" android:startColor="@color/clr_purple_53" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:centerColor="@color/primaryVariant" android:endColor="@color/secondaryColor" android:startColor="@color/primaryColor" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>