<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 阴影层 -->
    <item>
        <shape>
            <solid android:color="@color/buttonShadowColor" /> <!-- 颜色#8869E6 10%透明度，即1A8869E6 -->
            <corners android:radius="4dp" />
        </shape>
        <padding
            android:left="0dp"
            android:top="4dp"
            android:right="0dp"
            android:bottom="4dp" /> <!-- 阴影的 Y 轴偏移 -->
    </item>
    <item>
        <shape>
            <gradient
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="0"
                android:gradientRadius="80dp"
                android:centerColor="@color/moneyGradient1Color"
                android:endColor="@color/moneyGradient3Color"
                android:startColor="@color/moneyGradient2Color" />
            <corners android:radius="4dp" /> <!-- 设置模糊的边界 -->
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/strokeColor" />
            <corners android:radius="4dp" /> <!-- 设置模糊的边界 -->
        </shape>
    </item>
    <item android:drawable="@drawable/channel_checked" android:gravity="bottom|right" android:width="16dp" android:height="16dp"/>

</layer-list>