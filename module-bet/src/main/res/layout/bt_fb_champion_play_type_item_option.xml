<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_real_data"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bt_bg_champion_option_item"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_option_unable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/bt_color_car_dialog_hight_line"
            android:textSize="@dimen/bt_text_10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_option_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="50dp"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/bt_option_item_odd_selector"
            android:textSize="@dimen/bt_text_12sp"
            android:textStyle="bold"
            tools:text="主胜" />

        <com.xtree.bet.weight.DiscolourTextView
            android:id="@+id/tv_option_odd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="@color/bt_option_item_odd_selector"
            android:textSize="@dimen/bt_text_12sp"
            android:textStyle="bold"
            tools:text="1.25" />
    </RelativeLayout>

</LinearLayout>

