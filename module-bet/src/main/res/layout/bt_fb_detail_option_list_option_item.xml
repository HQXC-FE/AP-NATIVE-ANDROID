<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/bt_bg_detail_option_item"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_option_unable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/bt_color_car_dialog_hight_line"
        android:textSize="@dimen/bt_text_10sp"
        android:text="-" />

    <TextView
        android:id="@+id/tv_option_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="?attr/textTertiaryAttr"
        android:textSize="@dimen/bt_text_10sp"
        tools:text="主胜" />

    <com.xtree.bet.weight.DiscolourTextView
        android:id="@+id/tv_option_odd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/bt_text_color_primary"
        android:textSize="@dimen/bt_text_10sp"
        tools:text="1.25" />
</LinearLayout>

