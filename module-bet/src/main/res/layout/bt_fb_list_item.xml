<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bt_bg_match_item"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_league"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/bt_text_color_bold"
            android:textSize="@dimen/bt_text_15sp"
            android:textStyle="bold"
            tools:text="墨西哥甲级联赛" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@mipmap/bt_icon_expand" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_league_name"
            android:background="@color/bt_color_line" />
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rl_league">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="127dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_team_name_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="50dp"
                    android:text="多拉多斯"
                    android:textSize="@dimen/bt_text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="18dp"
                    android:text="0"
                    android:textColor="@color/bt_color_score"
                    android:textSize="@dimen/bt_text_12sp" />

                <TextView
                    android:id="@+id/tv_team_name_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_team_name_main"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="21dp"
                    android:text="多拉多斯"
                    android:textSize="@dimen/bt_text_12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_team_name_main"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="21dp"
                    android:layout_marginRight="18dp"
                    android:text="0"
                    android:textColor="@color/bt_color_score"
                    android:textSize="@dimen/bt_text_12sp" />

                <ImageView
                    android:id="@+id/iv_court"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_team_name_visitor"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/bt_icon_court" />

                <ImageView
                    android:id="@+id/iv_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_team_name_visitor"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/iv_court"
                    android:background="@mipmap/bt_icon_live" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <com.stx.xhb.androidx.XBanner
                    android:id="@+id/play_type_banner"
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    app:AutoPlayTime="3000"
                    app:isAutoPlay="false"
                    app:isShowIndicatorOnlyOne="true"
                    app:pageChangeDuration="800"
                    app:pointsPosition="CENTER"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:background="@color/bt_page_bg">
            <TextView
                android:id="@+id/tv_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="上半场15：15"
                android:textSize="@dimen/bt_text_12sp"
                android:textColor="@color/bt_color_blurred"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="32+>"
                android:textColor="@color/bt_color_blurred"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

