<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/csl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bt_bg_match_item">

    <View
        android:id="@+id/line_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bt_color_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_match_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/bt_color_blurred"
        android:textSize="@dimen/bt_text_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line_divider"
        tools:text="上半场15：15" />

    <TextView
        android:id="@+id/tv_team_name_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/bt_text_12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_match_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_match_time"
        tools:text="多拉多斯" />

    <TextView
        android:id="@+id/tv_score_main"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:textColor="@color/bt_color_score"
        android:textSize="@dimen/bt_text_12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_team_name_main"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/tv_team_name_main"
        tools:text="0" />

    <TextView
        android:id="@+id/tv_team_name_visitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:drawablePadding="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/bt_text_12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_team_name_main"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_name_main"
        tools:text="多拉多斯" />

    <TextView
        android:id="@+id/tv_score_visitor"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/bt_color_score"
        android:textSize="@dimen/bt_text_12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_team_name_visitor"
        app:layout_constraintStart_toStartOf="@+id/tv_score_main"
        app:layout_constraintTop_toTopOf="@+id/tv_team_name_visitor"
        tools:text="0" />

    <ImageView
        android:id="@+id/bt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:src="@mipmap/bt_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_team_name_main" />

    <View
        android:id="@+id/v_space"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="12dp"
        android:background="@color/clr_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_name_visitor" />
</androidx.constraintlayout.widget.ConstraintLayout>

