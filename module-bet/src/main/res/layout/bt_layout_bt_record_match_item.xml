<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_expand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <ImageView
        android:id="@id/iv_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bt_color_line"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_line">
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingTop="5dp"
                android:src="@mipmap/bt_record_league_logo"/>

            <TextView
                android:id="@+id/tv_league_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_match_time"
                android:layout_toRightOf="@+id/iv_icon"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="5dp"
                android:textColor="@color/bt_text_color_primary_3"
                android:textSize="@dimen/bt_text_10sp"
                tools:text="墨西哥甲级联赛" />

            <TextView
                android:id="@+id/tv_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:textColor="@color/bt_text_color_primary_3"
                android:textSize="@dimen/bt_text_10sp"
                tools:text="比赛时间：2023-11-01 18:00" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="3dp"
            android:layout_height="14dp"
            android:background="@drawable/bt_bg_bt_car_match_name"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rl_title" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bt_text_color_primary_1"
            android:textSize="@dimen/bt_text_13sp"
            app:layout_constraintStart_toEndOf="@+id/iv_name"
            app:layout_constraintEnd_toStartOf="@+id/tv_odd"
            app:layout_constraintTop_toBottomOf="@+id/rl_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            tools:text="布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特布鲁斯特" />

        <TextView
            android:id="@+id/tv_play_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/bt_text_color_primary_1"
            android:textSize="@dimen/bt_text_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            android:layout_marginStart="7dp"
            tools:text="全场让球" />

        <TextView
            android:id="@+id/tv_match_team"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/bt_color_hine_color"
            android:textSize="@dimen/bt_text_12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_full_score"
            app:layout_constraintTop_toBottomOf="@id/tv_play_type"
            android:layout_marginTop="3dp"
            android:layout_marginStart="7dp"
            tools:text="布鲁斯特VS若基诺" />

        <TextView
            android:id="@+id/tv_odd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/bt_color_car_dialog_hight_line2"
            android:textSize="@dimen/bt_text_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl_title"
            tools:text="2.04" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/bt_text_color_primary_1"
            android:textSize="@dimen/bt_text_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_odd"
            tools:text="赢" />

        <TextView
            android:id="@+id/tv_full_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@color/bt_text_color_primary_1"
            android:textSize="@dimen/bt_text_12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_result"
            tools:text="全场比分" />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
