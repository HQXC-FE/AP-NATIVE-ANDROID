<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tv_agent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/bt_text_12sp"
        android:drawableStart="@mipmap/bt_icon_change_agent"
        android:drawablePadding="3dp"
        android:text="默认代理服务器" />

    <TextView
        android:id="@+id/tv_agent_change"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/bt_color_under_bg_primary_text"
        android:text="切换"
        android:textSize="@dimen/bt_text_10sp"
        android:background="@drawable/bg_btn_radius_8_selector"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bt_color_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>


