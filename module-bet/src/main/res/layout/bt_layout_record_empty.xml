<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/csl_top"
    android:layout_marginTop="10dp"
    android:background="@color/clr_popwindow_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@mipmap/bt_record_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bt_txt_record_empty"
        android:textColor="@color/clr_txt_white_cm"
        android:textSize="@dimen/bt_text_12sp" />

    <TextView
        android:id="@+id/tv_to_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/bt_txt_search_record"
        android:textColor="@color/clr_txt_white_cm"
        android:textSize="@dimen/bt_text_12sp" />

    <TextView
        android:id="@+id/tv_bt_now"
        style="@style/style_cm_btn_round"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:text="@string/bt_txt_bt_right_now" />
</LinearLayout>
