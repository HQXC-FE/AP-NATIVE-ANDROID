<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/csl_top"
    android:layout_marginTop="10dp"
    android:background="@mipmap/bt_bg_dialog_bt"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="5dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@mipmap/bt_record_empty" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/bt_txt_record_empty"
        android:textColor="@color/bt_text_color_primary_3"
        android:textSize="@dimen/bt_text_12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/bt_txt_search_record"
        android:textColor="@color/bt_text_color_primary_3"
        android:textSize="@dimen/bt_text_12sp" />

    <TextView
        android:id="@+id/tv_bt_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="33dp"
        android:background="@mipmap/cm_bg_btn_2"
        android:gravity="center_horizontal"
        android:paddingTop="6dp"
        android:text="@string/bt_txt_bt_right_now"
        android:textColor="@color/bt_color_under_bg_primary_text"
        android:textSize="@dimen/bt_text_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
