<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivw_bg"
        android:layout_width="wrap_content"
        android:layout_height="410dp"
        android:layout_marginTop="60dp"
        android:padding="4dp"
        android:background="@drawable/bg_rc_recommend"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivw_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cm_dialog_bell"
        android:visibility="visible"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tvw_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivw_bg" />

    <TextView
        android:id="@+id/tvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="重要提示"
        android:textColor="@color/clr_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ivw_bg"
        app:layout_constraintStart_toStartOf="@id/ivw_bg"
        app:layout_constraintTop_toTopOf="@id/ivw_bg" />

    <TextView
        android:id="@+id/tvw_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/clr_grey_13"
        tools:text="熊猫体育结算波动较为频繁，为保证您的最佳体验，推荐您至“杏彩体育官方”进行游戏。"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/ivw_bg"
        app:layout_constraintStart_toStartOf="@id/ivw_bg"
        app:layout_constraintTop_toBottomOf="@+id/tvw_title" />

    <TextView
        android:id="@+id/tvw_pm"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        style="@style/style_rdo_recommend"
        android:textColor="@color/clr_purple_f0"
        android:background="@drawable/bg_btn_pm"
        android:gravity="center"
        android:padding="10dp"
        tools:text="继续进入熊猫体育"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/ivw_bg"
        app:layout_constraintStart_toStartOf="@+id/ivw_bg"
        app:layout_constraintTop_toBottomOf="@+id/tvw_msg" />

    <TextView
        android:id="@+id/tvw_fb"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        style="@style/style_btn_frame"
        android:gravity="center"
        android:padding="10dp"
        android:text="进入杏彩体育官方"
        android:textColor="@color/clr_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/ivw_bg"
        app:layout_constraintStart_toStartOf="@+id/ivw_bg"
        app:layout_constraintTop_toBottomOf="@+id/tvw_pm" />

    <CheckBox
        android:id="@+id/cb_tip_pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/style_cm_ckb"
        android:text="@string/txt_rc_not_tip"
        android:textColor="@color/clr_purple_01"
        android:textSize="12sp"
        android:theme="@style/PMTipCheckBoxTheme"
        app:layout_constraintBottom_toTopOf="@+id/iv_line"
        app:layout_constraintEnd_toEndOf="@+id/tvw_msg"
        app:layout_constraintStart_toStartOf="@+id/tvw_msg"
        app:layout_constraintTop_toBottomOf="@+id/tvw_fb" />

    <ImageView
        android:id="@+id/iv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/ic_rc_split_line"
        app:layout_constraintBottom_toBottomOf="@id/ivw_bg"
        app:layout_constraintEnd_toEndOf="@+id/cb_tip_pm"
        app:layout_constraintStart_toStartOf="@+id/cb_tip_pm"
        app:layout_constraintTop_toBottomOf="@+id/tvw_fb" />

    <TextView
        android:id="@+id/tvw_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:drawableStart="@mipmap/cm_ic_cs2"
        android:drawablePadding="3dp"
        android:text="@string/txt_contact_custom"
        app:layout_constraintBottom_toBottomOf="@id/ivw_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_line" />

</androidx.constraintlayout.widget.ConstraintLayout>
