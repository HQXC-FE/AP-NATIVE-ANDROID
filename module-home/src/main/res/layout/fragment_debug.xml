<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvw_title"
                style="@style/style_cm_title"
                android:text="Debug Model"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/ivw_cs"
                style="@style/style_ic_title_right"
                android:layout_marginEnd="@dimen/layout_margin"
                android:src="@mipmap/cm_ic_cs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ivw_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="64dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/style_item_report_value"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvw_version"
            style="@style/style_item_report_value"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_weight="0"
            android:gravity="center_horizontal"
            tools:text="v1.0.0 (100)" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                tools:visibility="visible">

                <LinearLayout
                    style="@style/style_item_ll_row_0"
                    android:layout_marginTop="24dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="APP名称：" />

                    <TextView
                        style="@style/style_item_report_value"
                        android:text="@string/app_name" />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_item_ll_row_0"
                    android:visibility="gone">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="VersionName：" />

                    <TextView
                        android:id="@+id/tvw_version_name"
                        style="@style/style_item_report_value"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout
                    style="@style/style_item_ll_row_0"
                    android:visibility="gone">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="VersionCode：" />

                    <TextView
                        android:id="@+id/tvw_version_code"
                        style="@style/style_item_report_value"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="Build Time：" />

                    <TextView
                        android:id="@+id/tvw_build_time"
                        style="@style/style_item_report_value"
                        tools:text="2024-02-28 1530" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="包名：" />

                    <TextView
                        android:id="@+id/tvw_pkg_name"
                        style="@style/style_item_report_value"
                        tools:text="com.xxx.xxx" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="Release：" />

                    <TextView
                        android:id="@+id/tvw_release"
                        style="@style/style_item_report_value"
                        tools:text="true" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="渠道编号：" />

                    <TextView
                        android:id="@+id/tvw_channel"
                        style="@style/style_item_report_value"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="API地址：" />

                    <TextView
                        android:id="@+id/tvw_api"
                        style="@style/style_item_report_value"
                        android:autoLink="web"
                        android:textColorLink="@color/clr_blue_03"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="H5地址：" />

                    <TextView
                        android:id="@+id/tvw_h5"
                        style="@style/style_item_report_value"
                        android:autoLink="web"
                        android:textColorLink="@color/clr_blue_03"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="TAG：" />

                    <TextView
                        android:id="@+id/tvw_tag"
                        style="@style/style_item_report_value"
                        tools:text="true" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="设备ID：" />

                    <TextView
                        android:id="@+id/tvw_dev_id"
                        style="@style/style_item_report_value"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="AndroidVersion：" />

                    <TextView
                        android:id="@+id/tvw_android_version"
                        style="@style/style_item_report_value"
                        tools:text="13 (33)" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="Manufacturer：" />

                    <TextView
                        android:id="@+id/tvw_manufacturer"
                        style="@style/style_item_report_value"
                        tools:text="Xiaomi" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="Model：" />

                    <TextView
                        android:id="@+id/tvw_model"
                        style="@style/style_item_report_value"
                        tools:text="2203129G" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="Screen Resolution：" />

                    <TextView
                        android:id="@+id/tvw_screen"
                        style="@style/style_item_report_value"
                        tools:text="1080x2400" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="登录名：" />

                    <TextView
                        android:id="@+id/tvw_username"
                        style="@style/style_item_report_value"
                        tools:text="kite" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="登录SESSION：" />

                    <TextView
                        android:id="@+id/tvw_session"
                        style="@style/style_item_report_value"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:ellipsize="end"
                        android:lines="1"
                        tools:text="Demo" />
                </LinearLayout>

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="登录TOKEN：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_token"
                    style="@style/style_item_report_value"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:ellipsize="end"
                    android:maxLines="2"
                    tools:text="Demo" />

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="API列表：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_api_list"
                    style="@style/style_item_report_value"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_weight="0"
                    android:ellipsize="end"
                    android:maxLines="4"
                    tools:text="Demo" />

                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="H5列表：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_h5_list"
                    style="@style/style_item_report_value"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:layout_weight="0"
                    android:ellipsize="end"
                    android:maxLines="4"
                    tools:text="Demo" />


                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        style="@style/style_item_report_title"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="0"
                        android:text="测速日志：" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_log"
                    style="@style/style_item_report_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:ellipsize="end"
                    tools:text="LOG" />


                <LinearLayout style="@style/style_item_ll_row_0">

                    <TextView
                        android:id="@+id/tvw_vf_globe"
                        style="@style/style_item_report_value"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:layout_weight="3"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="全局验证"
                        android:textColor="@color/clr_blue_03" />

                    <EditText
                        android:id="@+id/edt_vf_ip"
                        style="@style/style_item_report_value"
                        android:layout_width="match_parent"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:hint="请输入IP"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="114.114.114.114" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>