<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivw_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:src="@drawable/hm_img_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/hm_gm_ty_01" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_fc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/hm_bt_fast"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_left"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivw_split"
        android:layout_width="12dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/clr_transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivw_img"
        app:layout_constraintEnd_toEndOf="@id/ivw_img"
        app:layout_constraintStart_toStartOf="@id/ivw_img"
        app:layout_constraintTop_toTopOf="@id/ivw_img"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivw_cover_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/clr_transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivw_img"
        app:layout_constraintEnd_toStartOf="@id/ivw_split"
        app:layout_constraintStart_toStartOf="@id/ivw_img"
        app:layout_constraintTop_toTopOf="@id/ivw_img"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivw_cover_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="1dp"
        android:background="@color/clr_transparent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivw_img"
        app:layout_constraintEnd_toEndOf="@id/ivw_img"
        app:layout_constraintStart_toEndOf="@id/ivw_split"
        app:layout_constraintTop_toTopOf="@id/ivw_img"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivw_grey_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/hm_bg_entry"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvw_maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/hm_bg_maintaining"
        android:drawableStart="@mipmap/hm_ic_maintaining"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="@string/hm_txt_maintaining"
        android:textColor="@color/clr_hm_txt_black"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/ivw_img"
        app:layout_constraintStart_toStartOf="@id/ivw_img"
        tools:visibility="visible" />

    <RelativeLayout
        android:id="@+id/rl_space"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ivw_img"
        app:layout_constraintStart_toStartOf="@id/ivw_img"
        app:layout_constraintEnd_toEndOf="@id/ivw_img"/>

    <TextView
        android:id="@+id/tv_maintenance1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="@string/hm_txt_maintaining"
        android:textColor="@color/clr_hm_txt_black"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_maintenance2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:gravity="center_vertical"
        android:text="@string/hm_txt_maintaining"
        android:textColor="@color/clr_hm_txt_black"
        android:textSize="9sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivw_split"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>