<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xtree.live">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <application>

        <activity
            android:name="com.xtree.live.ui.main.floatingwindow.FloatingWindowActivity"
            android:launchMode="singleTask" />

        <activity android:name=".ui.main.activity.LiveDetailActivity"
            android:supportsPictureInPicture="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait"
            tools:targetApi="n" />

        <service android:name="com.xtree.live.ui.main.service.LiveWebSocketService"
            android:process=":push" />

    </application>

</manifest>