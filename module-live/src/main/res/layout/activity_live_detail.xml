<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.xtree.live.ui.main.viewmodel.LiveViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="ContentDescription, HardcodedText">

        <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/buttonBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@mipmap/cm_ic_back"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/video_player"
            app:layout_constraintTop_toTopOf="@+id/video_player"
            />

        <LinearLayout
            android:id="@+id/platformAdsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video_player">

            <TextView
                android:id="@+id/platformAdsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:lines="1"
                android:maxEms="8"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="给平台留一个广告位"
                android:textColor="@color/white"
                tools:text="给平台留一个广告位，如果不需要，就隐藏" />

            <com.xtree.base.widget.MarqueeTextView
                android:id="@+id/platformAdsContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:gravity="start|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:text="公告高能公告高能公告公告公安高公告公告" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_page"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/Theme.MaterialComponents.DayNight.NoActionBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/platformAdsLayout" />

<!--        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
