<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/giftDialogContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="10dp"
    tools:ignore="ContentDescription, SpUsage, HardcodedText, TextFields, Autofill"
    tools:viewBindingIgnore="true">
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/blockLiveGiftShown"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:buttonTint="@color/selector_block_gift_shown"
        android:padding="0dp"
        android:text="屏蔽礼物特效"
        android:textColor="@color/selector_block_gift_shown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeGiftDialog"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:padding="5dp"
        app:tint="@color/black"
        app:tintMode="src_atop"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@+id/blockLiveGiftShown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blockLiveGiftShown" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGift"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blockLiveGiftShown" />


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:dividerThickness="1px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvGift" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendGift"
        style="@style/Xiao.Button"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorAccent"
        android:padding="0dp"
        android:singleLine="true"
        android:text="送出礼物"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/diamondAmount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/diamondAmount"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/diamondAmount"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:text="@string/diamond_account" />
</androidx.constraintlayout.widget.ConstraintLayout>