<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEAFF"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4F5FF"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:id="@+id/rl_live_team"
                    android:layout_width="match_parent"
                    android:layout_height="32dp">

                    <LinearLayout
                        android:id="@+id/ll_main"
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_logo_main"
                            android:layout_width="38dp"
                            android:layout_height="38dp" />

                        <TextView
                            android:id="@+id/tv_team_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_logo_main"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@+id/tv_time"
                            android:gravity="center"
                            android:text="湖人"
                            android:textColor="#302E36"
                            android:textSize="@dimen/bt_text_14sp"
                            tools:text="湖人" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="187dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_logo_visitor"
                            android:layout_width="38dp"
                            android:layout_height="38dp" />

                        <TextView
                            android:id="@+id/tv_team_visisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_logo_main"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_toStartOf="@+id/tv_time"
                            android:gravity="center"
                            android:text="火箭"
                            android:textColor="#302E36"
                            android:textSize="@dimen/bt_text_14sp"
                            tools:text="火箭" />
                    </LinearLayout>

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fl_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/ll_end"
                        layout="@layout/bt_layout_match_ended" />


                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_category_type"
                            android:layout_width="match_parent"
                            android:layout_height="38dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="60dp"
                            android:textSize="10sp"
                            android:background="@drawable/shape_live_bet_gradient_30"
                            app:tabIndicatorFullWidth="false"
                            app:tabMode="scrollable"
                            app:tabRippleColor="@android:color/transparent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:tabGravity="center"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <RelativeLayout
            android:id="@+id/rl_cg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="94dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/iv_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bt_ic_chuan_suspend" />

            <TextView
                android:id="@+id/tv_cg_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:background="@mipmap/bt_bg_text_cg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/bt_color_under_bg_primary_text"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>