<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEAFF"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F4F5FF"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/rl_live_team"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="15dp">

                    <!-- 左侧主队 -->
                    <LinearLayout
                        android:id="@+id/ll_main"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ll_visitor"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/iv_logo_main"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:id="@+id/tv_team_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#302E36"
                            android:textSize="@dimen/bt_text_14sp"
                            tools:text="湖人" />
                    </LinearLayout>

                    <!-- 右侧客队 -->
                    <LinearLayout
                        android:id="@+id/ll_visitor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ll_main"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="10dp">

                        <ImageView
                            android:id="@+id/iv_logo_visitor"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:id="@+id/tv_team_visisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#302E36"
                            android:textSize="@dimen/bt_text_14sp"
                            tools:text="火箭" />
                    </LinearLayout>

                    <View
                        android:id="@+id/tv_team_visitor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEAFF"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/shape_live_bet_gradient_30">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_category_type"
                        android:layout_width="0dp"
                        android:layout_height="29dp"
                        android:layout_weight="1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:tabIndicatorFullWidth="true"
                        app:tabIndicatorHeight="0dp"
                        app:tabGravity="fill"
                        app:tabMode="scrollable"
                        app:tabRippleColor="@android:color/transparent" />

                    <ImageView
                        android:id="@+id/iv_expand"
                        android:paddingHorizontal="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:src="@drawable/live_ic_list_expand" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fl_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <include
                        android:id="@+id/ll_end"
                        layout="@layout/bt_layout_match_ended" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <RelativeLayout
            android:id="@+id/rl_cg"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="94dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/iv_bt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bt_ic_chuan_suspend" />

            <TextView
                android:id="@+id/tv_cg_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="4dp"
                android:background="@mipmap/bt_bg_text_cg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/bt_color_under_bg_primary_text"
                android:textSize="12sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>