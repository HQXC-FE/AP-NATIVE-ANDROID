<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.xtree.live.ui.main.model.anchor.LiveAnchorItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_live_anchor">

        <androidx.cardview.widget.CardView
            android:id="@+id/cbThumb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                imageUrl="@{m.thumb}" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{m.title}"
            android:textColor="@color/clr_txt_share"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbThumb" />

        <FrameLayout
            android:id="@+id/flAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_item_live_anchor_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    imageUrl="@{m.avatar}" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{m.userNickname}"
            android:textColor="@color/clr_txt_followers"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/flAvatar"
            app:layout_constraintStart_toEndOf="@+id/flAvatar"
            app:layout_constraintTop_toTopOf="@+id/flAvatar" />

        <ImageView
            android:id="@+id/ivLiving"
            isAnimationRunning="@{m.playing}"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/anim_living"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintStart_toEndOf="@+id/tvName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:drawableLeft="@mipmap/iv_live_hot"
            android:drawablePadding="4dp"
            android:text="@{m.heat}"
            android:textColor="@color/clr_txt_followers"
            app:layout_constraintBottom_toBottomOf="@+id/flAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_goneMarginEnd="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>