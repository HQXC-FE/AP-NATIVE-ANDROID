<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent"
  >
   <!-- -->
    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:orientation="vertical"

         tools:ignore="MissingConstraints"
         android:background="@drawable/anchor_item_bg"
         app:layout_constraintTop_toBottomOf="@+id/topView">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_weight="6"
             android:layout_marginTop="10dp"
            >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <include
                     android:id="@+id/iv_live_broadcaster_header"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_marginTop="10dp"
                     android:layout_marginLeft="10dp"
                     layout="@layout/item_live_broadcaster_header"
                     />
                 <TextView
                     android:id="@+id/tvLiveBroadcasterName"
                     android:text=""
                     android:textColor="@color/clr_txt_share"
                     android:textSize="14sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignTop="@id/iv_live_broadcaster_header"
                     android:layout_toRightOf="@id/iv_live_broadcaster_header"
                     android:layout_marginLeft="20dp"
                     tools:text="123123123"
                     />
                 <TextView
                     android:id="@+id/tvLiveBroadcasterFollowers"
                     android:text=" "
                     android:textColor="@color/clr_txt_followers"
                     android:textSize="12sp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignBottom="@id/iv_live_broadcaster_header"
                     android:layout_toRightOf="@id/iv_live_broadcaster_header"
                     android:layout_marginLeft="20dp"
                     tools:text=" 0000"
                     />
                 <ImageView
                     android:id="@+id/ivLiveAttentionStatus"
                     android:layout_width="54dp"
                     android:layout_height="24dp"
                     android:background="@mipmap/lv_attention_status_off"
                     android:layout_alignTop="@id/iv_live_broadcaster_header"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="10dp"
                     android:visibility="gone"
                     />
             </RelativeLayout>

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="4"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:orientation="vertical"
             >
             <TextView
                 android:id="@+id/tv_anchor_signature"
                 android:text=""
                 android:textColor="@color/clr_rc_txt_hi"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:text="足够专业才能创造“梦”想，“稳”健才是成功基石！专注收米！"
                 android:visibility="gone"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="20dp"
                 />
         </LinearLayout>
     </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>