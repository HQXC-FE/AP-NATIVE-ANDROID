<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent"
  >
     <LinearLayout
         android:id="@+id/iv_header_on_line"
         android:layout_width="48dp"
         android:layout_height="48dp"
         android:background="@mipmap/lv_broadcaster_header_off"
         android:layout_gravity="center"
         android:orientation="vertical"
         android:visibility="gone"
         tools:ignore="MissingConstraints">
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <ImageView
                 android:id="@+id/iv_live_on_header"
                 android:layout_width="42dp"
                 android:layout_height="42dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="3dp"
                 android:layout_marginLeft="3dp"
                 android:background="@mipmap/lv_broadcaster_header_default_off"/>

         </RelativeLayout>
     </LinearLayout>


    <LinearLayout
        android:id="@+id/iv_header_off_line"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/lv_broadcaster_header_on"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_live_broadcaster_header"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:background="@mipmap/lv_broadcaster_header_default_on"/>

            <ImageView
                android:id="@+id/ivIsLive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/lv_broadcaster_header_default"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>