<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent"
  >
     <LinearLayout
         android:id="@+id/iv_header_no_line"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/bg_live_broadcaster"
         android:orientation="vertical"
         android:visibility="visible"
         tools:ignore="MissingConstraints">

         <ImageView
             android:id="@+id/iv_live_broadcaster_header"
             android:layout_width="48dp"
             android:layout_height="48dp"
             android:background="@mipmap/lv_broadcaster_header_default"/>

     </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>