<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription, HardcodedText, SmallSp"
    tools:parentTag="FrameLayout"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#33000000">

        <ImageView
            android:id="@id/exo_play_pause"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="48dp"
            android:layout_height="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/icon_player_logo"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.xtree.live.player.WidgetExoPlayerTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:buffered_color="#E02020"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            app:layout_constraintEnd_toStartOf="@+id/exo_position"
            app:layout_constraintStart_toEndOf="@+id/iv_logo"
            app:layout_constraintTop_toTopOf="@id/iv_logo"
            app:played_color="#E02020"
            app:unplayed_color="#7FFFFFFF" />

        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_progress"
            app:layout_constraintEnd_toStartOf="@id/text"
            app:layout_constraintTop_toTopOf="@+id/exo_progress"
            tools:text="06:06" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="/"
            android:textColor="#7FFFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_progress"
            app:layout_constraintEnd_toStartOf="@+id/exo_duration"
            app:layout_constraintTop_toTopOf="@+id/exo_progress" />

        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:textColor="#7FFFFFFF"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_progress"
            app:layout_constraintEnd_toStartOf="@+id/exo_quality"
            app:layout_constraintTop_toTopOf="@+id/exo_progress"
            tools:text="1:06:06" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/exo_group_time_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:constraint_referenced_ids="exo_position,text,exo_duration,exo_progress" />

        <TextView
            android:id="@+id/exo_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="#80FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            app:layout_constraintEnd_toStartOf="@id/exo_fullscreen"
            app:layout_constraintTop_toTopOf="@id/iv_logo"
            tools:text="流暢" />

        <ImageView
            android:id="@+id/exo_fullscreen"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:src="@drawable/exo_icon_fullscreen_enter"
            app:layout_constraintBottom_toBottomOf="@id/iv_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_logo" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/bottomBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:barrierAllowsGoneWidgets="true"
            app:constraint_referenced_ids="iv_logo,exo_position,text,exo_duration,exo_quality,exo_fullscreen" />


        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/topBarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:barrierAllowsGoneWidgets="true"
            app:constraint_referenced_ids="btnPip,btnSettings,btnReport" />

        <ImageView
            android:id="@+id/btnPip"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_pip"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/btnSettings"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

<!--        <org.cybergarage.ui.MediaRouterButton-->
<!--            android:id="@+id/btnMirror"-->
<!--            android:layout_width="30dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            android:padding="3dp"-->
<!--            android:visibility="gone"-->
<!--            app:layout_constraintEnd_toStartOf="@id/btnSettings"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:routeButtonTint="@color/white"-->
<!--            tools:background="@drawable/ic_dlna_button_grey"-->
<!--            tools:visibility="visible" />-->

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:padding="3dp"
            android:src="@drawable/ic_settings"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/btnReport"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btnReport"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="10dp"
            android:src="@mipmap/icon_match_report"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>