<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChatItem.UserName" parent="TextAppearance.Material3.BodySmall">
        <item name="android:minEms">4</item>
        <item name="android:textColor">#025BE8</item>
    </style>

    <style name="ChatItem.UserName2" parent="TextAppearance.Material3.BodySmall">
        <item name="android:minEms">4</item>
        <item name="android:textColor">#025BE8</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog2" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00000000</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="tipDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00000000</item>
        <!--显示区域以外是否使用黑色半透明背景-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bottomToTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/bottomview_anim_enter</item>
        <item name="android:windowExitAnimation">@anim/bottomview_anim_exit</item>
    </style>


    <style name="line" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <style name="ChatItem.Message.Text" parent="TextAppearance.Material3.BodySmall">
        <item name="android:autoLink">web</item>
        <item name="android:minEms">4</item>
        <item name="android:textColor">#414655</item>
        <item name="android:textColorLink">#127BD1</item>
    </style>

    <style name="ChatItem.Message.Text.Outgoing" parent="ChatItem.Message.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatItem.Time.Dark" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:background">@drawable/shape_msg_time_bg</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChatItem.Time.Dark.Outgoing">
        <item name="android:background">@null</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="giftDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Xiao.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTintMode">src_atop</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="iconTintMode">src_atop</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">20dp</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_background_selector</item>
        <item name="tabRippleColor">@android:color/transparent</item>
    </style>

</resources>