<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/lt_chasing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--            标题-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="追号"
            android:textColor="@color/lt_color_text6"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <!--            关闭-->
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:src="@mipmap/lt_icon_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_chasing"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:tabIndicatorHeight="3dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/clr_main_18"
            app:tabTextAppearance="@style/style_lottery_tab"
            app:tabTextColor="@color/clr_txt_black_05" />

        <com.xtree.lottery.ui.view.PlusMinusView
            android:id="@+id/plus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/g1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tl_chasing" />

        <com.xtree.lottery.ui.view.PlusMinusView
            android:id="@+id/plus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/g1"
            app:layout_constraintTop_toTopOf="@+id/plus1" />

        <com.xtree.lottery.ui.view.PlusMinusView
            android:id="@+id/plus3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/g1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plus1" />

        <com.xtree.lottery.ui.view.PlusMinusView
            android:id="@+id/plus4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/g1"
            app:layout_constraintTop_toTopOf="@+id/plus3" />

        <com.xtree.lottery.ui.view.PlusMinusView
            android:id="@+id/plus5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toStartOf="@+id/g1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plus3" />

        <CheckBox
            android:id="@+id/tv_stop_chasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:button="@drawable/checkbox_stop_chasing"
            android:checked="true"
            android:gravity="center"
            android:text=" 中奖后停止追号"
            android:textColor="@color/clr_txt_black_03"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/plus1"
            app:layout_constraintTop_toBottomOf="@+id/tl_chasing" />

        <ImageView
            android:id="@+id/iv_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bt_generate"
            app:layout_constraintBottom_toBottomOf="@+id/tv_stop_chasing"
            app:layout_constraintEnd_toEndOf="@+id/plus2"
            app:layout_constraintTop_toTopOf="@+id/tv_stop_chasing" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bt_cancel"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/lt_color_text3"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_save_plan"
            app:layout_constraintEnd_toStartOf="@+id/g1" />

        <TextView
            android:id="@+id/tv_save_plan"
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bt_save_plan"
            android:gravity="center"
            android:text="保存方案"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/g1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:text="单期注数: 1  追号总期数: 0            追号总金额: 0.000"
            android:textColor="@color/clr_main_18"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_save_plan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:background="@drawable/rv_chasing"
            app:layout_constraintBottom_toTopOf="@+id/tv_result"
            app:layout_constraintTop_toBottomOf="@+id/iv_generate">

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="55"
                    android:gravity="center"
                    android:text="追号"
                    android:textColor="@color/clr_main_27" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="102"
                    android:gravity="center"
                    android:text="奖期"
                    android:textColor="@color/clr_main_27" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="90"
                    android:gravity="center"
                    android:text="倍数"
                    android:textColor="@color/clr_main_27" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="108"
                    android:gravity="center"
                    android:text="金额"
                    android:textColor="@color/clr_main_27" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_chasing_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>