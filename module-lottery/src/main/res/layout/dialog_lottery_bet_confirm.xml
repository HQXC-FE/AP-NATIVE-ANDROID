<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.xtree.lottery.ui.lotterybet.viewmodel.LotteryBetConfirmViewModel" />

        <import type="android.view.View" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_white_c4"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_clrmain13_ct4"
                android:paddingTop="11dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投注确认"
                    android:textSize="16sp"
                    android:textColor="@color/clr_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.bonusNumberTitle}"
                    tools:text="确认要加入20240105期?"
                    android:layout_marginTop="3dp"
                    android:textSize="14sp"
                    android:textColor="@color/clr_white" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lot_txt_confirm_solo_tip"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:textColor="@color/clr_main_19"
                android:gravity="center"
                android:visibility="@{model.containSolo?View.VISIBLE:View.GONE}" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintHeight_max="210dp"
                    itemData="@{model.datas}"
                    itemViewType="@{model.itemType}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额:"
                    android:textSize="15sp"
                    android:textColor="@color/lt_color_text2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.totalMoney}"
                    android:textSize="15sp"
                    android:textColor="@color/lt_color_text14"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 元"
                    android:textSize="15sp"
                    android:textColor="@color/lt_color_text2"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp">

                <!-- 取消-->
                <com.lihang.ShadowLayout
                    android:id="@+id/bet_confirm_bt1"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    app:hl_cornerRadius="42dp"
                    app:hl_shadowColor="@color/lt_color_shadows1"
                    app:hl_shadowLimit="2dp"
                    app:hl_layoutBackground="@drawable/lt_shape_gradient_clrmain03_clrmain11"
                    app:hl_layoutBackground_clickFalse="@drawable/lt_shape_solide_white"
                    app:hl_shapeMode="pressed"
                    app:hl_textColor="@color/clr_white"
                    android:onClick="@{() -> model.cancle()}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bet_confirm_bt2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="取消"
                        android:textSize="14sp"
                        android:textColor="@color/lt_color_text11"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </com.lihang.ShadowLayout>

                <!-- 清除单挑-->
                <com.lihang.ShadowLayout
                    android:id="@+id/bet_confirm_bt2"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    app:hl_cornerRadius="42dp"
                    app:hl_shadowColor="@color/lt_color_shadows1"
                    app:hl_shadowLimit="2dp"
                    app:hl_layoutBackground="@drawable/lt_shape_gradient_clrmain03_clrmain11"
                    app:hl_layoutBackground_clickFalse="@drawable/lt_shape_solide_white"
                    app:hl_shapeMode="pressed"
                    app:hl_textColor="@color/clr_white"
                    android:onClick="@{() -> model.doClear()}"
                    android:visibility="@{model.containSolo?View.VISIBLE:View.GONE}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/bet_confirm_bt3"
                    app:layout_constraintStart_toEndOf="@id/bet_confirm_bt1"
                    app:layout_constraintVertical_bias="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="清除单挑"
                        android:textSize="14sp"
                        android:textColor="@color/lt_color_text11"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </com.lihang.ShadowLayout>

                <!-- 确认-->
                <com.lihang.ShadowLayout
                    android:id="@+id/bet_confirm_bt3"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    app:hl_cornerRadius="42dp"
                    app:hl_shadowColor="@color/lt_color_shadows1"
                    app:hl_shadowLimit="2dp"
                    app:hl_layoutBackground="@drawable/lt_shape_gradient_clrmain03_clrmain11"
                    app:hl_layoutBackground_clickFalse="@drawable/lt_shape_solide_white"
                    app:hl_shapeMode="pressed"
                    app:hl_textColor="@color/clr_white"
                    android:onClick="@{model::bet}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/bet_confirm_bt2"
                    app:layout_constraintVertical_bias="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="确认"
                        android:textSize="14sp"
                        android:textColor="@color/lt_color_text11"
                        android:layout_gravity="center"
                        android:gravity="center"/>

                </com.lihang.ShadowLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </FrameLayout>

</layout>