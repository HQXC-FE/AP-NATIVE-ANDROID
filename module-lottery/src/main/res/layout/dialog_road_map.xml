<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/clr_transparent"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_top_main"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="路图纸"
                android:textColor="@color/clr_white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivw_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="close"
                android:padding="4dp"
                android:src="@mipmap/ic_pop_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:background="@color/clr_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal">

                    <include layout="@layout/layout_roadmap_top_choose_tab" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_roadmap_left_button"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:text="珠\n盘\n路"
                        android:textColor="@color/clr_white"
                        android:textSize="13sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_zhulu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FCF9F6"
                        tools:itemCount="6" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#FCF9F6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_roadmap_left_button"
                        android:gravity="center"
                        android:paddingHorizontal="5dp"
                        android:text="大\n路"
                        android:textColor="@color/clr_white"
                        android:textSize="13sp" />


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_dalu"
                        android:background="#FCF9F6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:itemCount="6" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_xiao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_red_circle"
                        android:drawablePadding="@dimen/dp_5"
                        android:textColor="#EB5428"
                        android:textSize="13sp"
                        android:text="小"
                        />

                    <TextView
                        android:id="@+id/tv_da"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_blue_circle"
                        android:drawablePadding="@dimen/dp_5"
                        android:layout_marginLeft="40dp"
                        android:textColor="#84D9F5"
                        android:textSize="13sp"
                        android:text="大"
                        />

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>