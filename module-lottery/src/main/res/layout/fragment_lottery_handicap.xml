<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.xtree.lottery.ui.lotterybet.viewmodel.LotteryHandicapViewModel" />

        <import type="android.view.View" />

        <import type="android.R.string" />

        <import type="com.xtree.lottery.R" />

        <import type="android.text.TextUtils" />

        <import type="androidx.core.content.ContextCompat" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        开奖号码-->
        <com.xtree.lottery.ui.view.LotteryDrawView
            android:id="@+id/lottery_handicap_drawview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!--        玩法选项卡-->
        <RelativeLayout
            android:id="@+id/lottery_handicap_tablayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintTop_toBottomOf="@id/lottery_handicap_drawview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--            路线图-->
            <TextView
                android:id="@+id/lottery_handicap_roadmap"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="路线图"
                android:textSize="14sp"
                android:layout_marginRight="@dimen/dp_15"
                android:textColor="@color/clr_white"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:background="@drawable/bg_goroadmap_button"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                app:tabGravity="start"
                app:tabMode="scrollable"
                android:tooltipText="@null"
                android:longClickable="false"
                app:tabIndicatorHeight="4dp"
                app:tabIndicatorColor="@color/clr_main_02"
                app:tabTextColor="@color/lt_color_text4"
                app:tabSelectedTextColor="@color/lt_color_text6"
                app:tabBackground="@android:color/transparent"
                app:tabRippleColor="@android:color/transparent"
                setSelectedListener="@{model}"
                tabs="@{model.tabs}"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/lottery_handicap_roadmap"
                android:background="@color/clr_main_09"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <!--        投注-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lottery_handicap_showlayout"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:paddingTop="8dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!--            一键投注-->
            <com.lihang.ShadowLayout
                android:id="@+id/lottery_handicap_buy"
                android:layout_width="120dp"
                android:layout_height="42dp"
                app:hl_cornerRadius="42dp"
                app:hl_shadowColor="@color/lt_color_shadows1"
                app:hl_shadowLimit="2dp"
                app:hl_layoutBackground="@drawable/lt_shape_gradient_clrmain03_clrmain11"
                app:hl_layoutBackground_clickFalse="@drawable/lt_shape_solide_white"
                app:hl_shapeMode="pressed"
                app:hl_textColor="@color/clr_white"
                app:clickable="@{model.betLiveData!=null}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0.5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="一键投注"
                    android:textSize="14sp"
                    android:textColor="@{model.betLiveData!=null?@color/clr_white:@color/lt_color_text11}"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.lihang.ShadowLayout>

            <!--            快选金额-->
            <com.lihang.ShadowLayout
                android:id="@+id/lottery_handicap_selectamount"
                android:layout_width="98dp"
                android:layout_height="42dp"
                app:hl_cornerRadius="88dp"
                app:hl_shadowColor="@color/lt_color_shadows1"
                app:hl_shadowLimit="2dp"
                android:layout_marginEnd="4dp"
                app:hl_layoutBackground="@color/clr_main_13"
                android:onClick="@{() -> model.QuickPickAmount()}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_buy"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintVertical_bias="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快选金额"
                    android:textSize="14sp"
                    android:textColor="@color/clr_white"
                    android:drawableBottom="@{model.showChipSetting==true?ContextCompat.getDrawable(context,R.mipmap.lt_icon_arrow_up):ContextCompat.getDrawable(context,R.mipmap.lt_icon_arrow_down)}"
                    tools:drawableBottom="@mipmap/lt_icon_arrow_down"
                    android:layout_gravity="center"
                    android:gravity="center"/>

            </com.lihang.ShadowLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="4dp"
                app:layout_constrainedWidth="true"
                android:maxWidth="86dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_selectamount"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5">

                <TextView
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:text="自定金额"
                    android:textSize="12sp"
                    android:textColor="@color/clr_txt_black_03"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="@={model.moneyLiveData}"
                    android:textSize="14sp"
                    android:textColor="@color/lt_color_text14"
                    android:inputType="number"
                    android:gravity="center"
                    android:maxLength="5"
                    android:padding="3dp"
                    android:background="@drawable/lt_shape_solid_white_stroke_clrmain23_05_c8"
                    android:layout_marginStart="2dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        余额-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lottery_handicap_balancelayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lottery_handicap_showlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/lottery_handicap_balance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额："
                android:textSize="14sp"
                android:textColor="@color/lt_color_text8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/lottery_handicap_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.balanceData}"
                android:textSize="14sp"
                android:textColor="@color/lt_color_text8"
                android:layout_marginStart="2dp"
                tools:text="¥ 88,888,888.00"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_balance_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <LinearLayout
                android:id="@+id/lottery_handicap_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已选："
                    android:textColor="@color/lt_color_text6"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/lt_color_text14"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注 共"
                    android:textColor="@color/lt_color_text6"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/lt_color_text14"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/lt_color_text6"
                    android:textSize="12sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/lottery_handicap_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lt_icon_delate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_order"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="@{TextUtils.isEmpty(model.prizeData)?View.GONE:View.VISIBLE}"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_order"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_delete"
                app:layout_constraintHorizontal_bias="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="返点"
                    android:text="返点"
                    android:textSize="12sp"
                    android:textColor="@color/lt_color_text3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/prize_switch_off"
                    android:onClick="@{model.showPrizeMenu}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="9.0%"
                    android:text="@{model.prizeData}"
                    android:textSize="12sp"
                    android:textColor="@color/lt_color_text16"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        选择筹码-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lottery_handicap_chipslayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:background="@color/clr_white"
            android:clickable="true"
            android:elevation="2dp"
            android:visibility="@{model.showChipSetting==true?View.VISIBLE:View.GONE}"
            tools:visibility="gone"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lottery_handicap_showlayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/lottery_handicap_chips1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="99999"
                android:text="@{String.valueOf(model.chips[0])}"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{() -> model.pickChips(model.chips[0])}"
                app:layout_constraintDimensionRatio="H,1:1"
                android:background="@mipmap/lt_icon_chip1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_chips2"/>

            <TextView
                android:id="@+id/lottery_handicap_chips2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="99999"
                android:text="@{String.valueOf(model.chips[1])}"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{() -> model.pickChips(model.chips[1])}"
                app:layout_constraintDimensionRatio="H,1:1"
                android:background="@mipmap/lt_icon_chip2"
                android:layout_weight="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_chips1"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_chips3"/>

            <TextView
                android:id="@+id/lottery_handicap_chips3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="99999"
                android:text="@{String.valueOf(model.chips[2])}"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{() -> model.pickChips(model.chips[2])}"
                app:layout_constraintDimensionRatio="H,1:1"
                android:background="@mipmap/lt_icon_chip3"
                android:layout_weight="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_chips2"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_chips4"/>

            <TextView
                android:id="@+id/lottery_handicap_chips4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="99999"
                android:text="@{String.valueOf(model.chips[3])}"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{() -> model.pickChips(model.chips[3])}"
                app:layout_constraintDimensionRatio="H,1:1"
                android:background="@mipmap/lt_icon_chip4"
                android:layout_weight="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_chips3"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_chips5"/>

            <TextView
                android:id="@+id/lottery_handicap_chips5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="99999"
                android:text="@{String.valueOf(model.chips[4])}"
                android:textColor="@color/clr_white"
                android:textSize="14sp"
                android:gravity="center"
                android:onClick="@{() -> model.pickChips(model.chips[4])}"
                app:layout_constraintDimensionRatio="H,1:1"
                android:background="@mipmap/lt_icon_chip5"
                android:layout_weight="1"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_chips4"
                app:layout_constraintEnd_toStartOf="@id/lottery_handicap_chips6"/>

            <ImageView
                android:id="@+id/lottery_handicap_chips6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lt_icon_chips_setting"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:onClick="@{() -> model.settingChips()}"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/lottery_handicap_chips5"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        选注-->
        <com.xtree.lottery.ui.view.LotteryBetView
            android:id="@+id/lottery_handicap_betlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_goneMarginBottom="45dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@id/lottery_handicap_tablayout"
            app:layout_constraintBottom_toTopOf="@id/lottery_handicap_balancelayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>