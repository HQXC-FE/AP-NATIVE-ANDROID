<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="m"
            type="com.xtree.lottery.ui.view.model.BetHandicapModel" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>
    <com.lihang.ShadowLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:hl_cornerRadius="12dp"
        app:hl_shadowColor="@color/lt_color_shadows1"
        app:hl_shadowLimit="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <com.lihang.ShadowLayout
                android:id="@+id/item_handicap1_labelLayout"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:minWidth="76dp"
                app:hl_cornerRadius="88dp"
                app:hl_shadowColor="@color/lt_color_shadows1"
                app:hl_shadowLimit="2dp"
                app:hl_layoutBackground="@color/clr_main_08a"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/item_handicap1_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="百位"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:textColor="@color/lt_color_text2"
                    android:textSize="14sp"
                    android:layout_gravity="center"/>

            </com.lihang.ShadowLayout>

            <GridLayout
                android:id="@+id/item_handicap1_gridlayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:columnCount="4"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintTop_toBottomOf="@id/item_handicap1_labelLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.lihang.ShadowLayout>

</layout>