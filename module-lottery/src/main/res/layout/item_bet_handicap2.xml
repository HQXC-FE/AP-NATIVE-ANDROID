<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="m"
            type="com.xtree.lottery.ui.view.model.BetHandicapModel" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>
    <com.lihang.ShadowLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:hl_cornerRadius="8dp"
        app:hl_shadowColor="@color/lt_color_shadows1"
        app:hl_shadowLimit="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_columnWeight="1">

        <RelativeLayout
            android:id="@+id/label_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@{m.clicked?@drawable/lt_shape_solid_clrmain13_c8:@drawable/lt_shape_solid_white_stroke_clrmain23_05_c8}">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.data.name}"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@{m.clicked?@color/clr_white:@color/lt_color_text6}"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/label_odd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.data.codes.get(0).nonRebatePrize}"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@{m.clicked?@color/clr_white:@color/lt_color_text6}"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </com.lihang.ShadowLayout>

</layout>