<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="m"
            type="com.xtree.lottery.ui.view.model.BetRacingBetTitleModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Space
            android:id="@+id/item_racing_bet_space1"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/item_racing_bet_title_bt1"
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:text="快"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/lt_shape_racing_bet_def_rec"
            app:layout_constraintTop_toTopOf="@id/item_racing_bet_space1"
            app:layout_constraintBottom_toBottomOf="@id/item_racing_bet_space1"
            app:layout_constraintStart_toStartOf="@id/item_racing_bet_space1"
            app:layout_constraintEnd_toEndOf="@id/item_racing_bet_space1"/>

        <TextView
            android:id="@+id/item_racing_bet_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vs"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_racing_bet_space1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <Space
            android:id="@+id/item_racing_bet_space2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/item_racing_bet_vs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <TextView
            android:id="@+id/item_racing_bet_title_bt2"
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:text="慢"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/lt_shape_racing_bet_def_rec"
            app:layout_constraintTop_toTopOf="@id/item_racing_bet_space2"
            app:layout_constraintBottom_toBottomOf="@id/item_racing_bet_space2"
            app:layout_constraintStart_toStartOf="@id/item_racing_bet_space2"
            app:layout_constraintEnd_toEndOf="@id/item_racing_bet_space2"/>


        <TextView
            android:id="@+id/item_racing_bet_title_bt3"
            android:layout_width="34dp"
            android:layout_height="22dp"
            android:text="全清"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/lt_shape_racing_bet_def_rec"
            app:layout_constraintTop_toBottomOf="@id/item_racing_bet_space2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>