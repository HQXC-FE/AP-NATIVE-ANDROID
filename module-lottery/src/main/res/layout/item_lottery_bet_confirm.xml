<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.xtree.lottery.data.source.request.LotteryBetRequest.BetOrderData" />

        <import type="android.view.View" />

        <import type="java.math.BigDecimal" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_bet_confirm_yuan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="28dp"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@{m.moneyName}"
                android:textColor="@color/white"
                android:textSize="10sp"
                tools:text="1厘" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/item_bet_confirm_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/item_bet_confirm_yuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/item_bet_confirm_yuan"
            app:layout_constraintTop_toTopOf="@id/item_bet_confirm_yuan"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单挑"
                android:textColor="@color/lt_color_text14"
                android:textSize="12sp"
                android:visibility="@{m.solo?View.VISIBLE:View.GONE}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.desc.substring(0,m.desc.lastIndexOf(']')+1)}"
                android:textColor="@color/lt_color_text6"
                android:textSize="12sp"
                tools:text="[后三码_复式]" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{BigDecimal.valueOf(m.money).toPlainString()}"
                android:textColor="@color/lt_color_text14"
                android:textSize="12sp"
                tools:text="20000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/lt_color_text6"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_bet_confirm_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/item_bet_confirm_yuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/item_bet_confirm_layout1"
            app:layout_constraintTop_toBottomOf="@id/item_bet_confirm_layout1"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号码："
                android:textColor="@color/lt_color_text6"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.desc.substring(m.desc.lastIndexOf(']')+1)}"
                android:textColor="@color/lt_color_text6"
                android:textSize="12sp"
                tools:text="1,1,1" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>