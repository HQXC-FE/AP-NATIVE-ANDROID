<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.xtree.lottery.data.source.request.LotteryBetRequest.BetOrderData" />

        <import type="android.view.View" />
        <import type="java.math.BigDecimal"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/item_bet_confirm_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_yuan"
            android:layout_marginStart="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"/>

        <LinearLayout
            android:id="@+id/item_bet_confirm_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/item_bet_confirm_yuan"
            app:layout_constraintBottom_toBottomOf="@id/item_bet_confirm_yuan"
            app:layout_constraintStart_toEndOf="@id/item_bet_confirm_yuan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单挑"
                android:textSize="12sp"
                android:textColor="@color/lt_color_text14"
                android:visibility="@{m.solo?View.VISIBLE:View.GONE}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="[后三码_复式]"
                android:text="@{m.desc.substring(0,m.desc.lastIndexOf(']')+1)}"
                android:textSize="12sp"
                android:textColor="@color/lt_color_text6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="20000"
                android:text="@{BigDecimal.valueOf(m.money).toPlainString()}"
                android:textSize="12sp"
                android:textColor="@color/lt_color_text14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="12sp"
                android:textColor="@color/lt_color_text6" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_bet_confirm_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/item_bet_confirm_layout1"
            app:layout_constraintBottom_toBottomOf="@id/item_bet_confirm_yuan"
            app:layout_constraintStart_toStartOf="@id/item_bet_confirm_layout1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="号码："
                android:textSize="12sp"
                android:textColor="@color/lt_color_text6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1,1,1"
                android:text="@{m.desc.substring(m.desc.lastIndexOf(']')+1)}"
                android:textSize="12sp"
                android:textColor="@color/lt_color_text6" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>