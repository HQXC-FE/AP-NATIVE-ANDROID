<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="m"
            type="com.xtree.lottery.ui.view.model.LotteryPickModel" />

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/lottery_button"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="@{m.table}"
            android:textSize="20sp"
            android:textColor="@color/lt_color_text13_white"
            android:gravity="center"
            android:layout_gravity="center"
            tools:text="1"
            android:checked="@{m.checked}"
            android:clickable="false"
            android:button="@null"
            android:background="@drawable/lt_selector_lottery_pick_ball"
            tools:background="@mipmap/lt_icon_lottery_pick_checked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{m.tag}"
            android:textColor="@{m.tagColor}"
            tools:text="12"
            android:paddingTop="3dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="@{TextUtils.isEmpty(m.tag)?View.GONE:View.VISIBLE}"/>

    </LinearLayout>
</layout>