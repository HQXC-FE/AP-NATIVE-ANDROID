<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:hl_cornerRadius="8dp"
        app:hl_shadowColor="@color/lt_color_shadows1"
        app:hl_shadowLimit="2dp"
        android:layout_columnWeight="1"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/label_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@drawable/lt_shape_solid_white_stroke_clrmain23_05_c8">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="3"
                android:textSize="12dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/lt_color_text6"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/label_odd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9.800"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/lt_color_text6"
                android:autoSizeMaxTextSize="14sp"
                android:autoSizeMinTextSize="8sp"
                android:lines="1"
                android:gravity="center|end"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/label_name"/>

        </RelativeLayout>
    </com.lihang.ShadowLayout>
</layout>
