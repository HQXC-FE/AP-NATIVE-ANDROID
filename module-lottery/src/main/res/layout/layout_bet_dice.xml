<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.xtree.lottery.ui.view.viewmodel.BetDiceViewModel" />

        <import type="android.view.View" />

        <import type="com.xtree.lottery.ui.view.viewmodel.BetDiceViewModel.Dice" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bet_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@mipmap/lt_icon_hint"
            android:drawablePadding="2dp"
            android:text="帮助"
            android:textColor="@color/lt_color_text12"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/bet_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableStart="@mipmap/lt_icon_noti"
            android:drawablePadding="2dp"
            android:text="示例"
            android:textColor="@color/lt_color_text12"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bet_help"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/bet_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:text="从个、十、百位各选一个号码组成一注。"
            android:textColor="@color/lt_color_text12"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bet_example"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <com.lihang.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:hl_cornerRadius="12dp"
            app:hl_shadowColor="@color/lt_color_shadows1"
            app:hl_shadowLimit="2dp"
            app:layout_constraintTop_toBottomOf="@+id/bet_tip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{m.title0}"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    itemData="@{m.num0Datas}"
                    itemViewType="@{m.itemTypes}"
                    onBindListener="@{m.onBindListener}"
                    spanCount="@{3}"
                    gridSpace="@{@dimen/grid_space30}"
                    android:paddingBottom="@dimen/grid_space30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="@dimen/grid_space15"
                    android:paddingEnd="@dimen/grid_space15"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@{m.title1}"
                    android:textSize="14sp"
                    android:visibility="@{m.dice==Dice.Relation?View.VISIBLE:View.GONE}" />

                <androidx.recyclerview.widget.RecyclerView
                    itemData="@{m.num1Datas}"
                    itemViewType="@{m.itemTypes}"
                    onBindListener="@{m.onBindListener}"
                    spanCount="@{3}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="@{m.dice==Dice.Relation?View.VISIBLE:View.GONE}" />
            </LinearLayout>

        </com.lihang.ShadowLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>