<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/positionPopupContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_6"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    >


    <TextView
        android:id="@+id/tv_choose_weishu_w"
        android:text="万位"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lt_color_text6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_choose_weishu_q"
        android:text="千位"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lt_color_text6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_choose_weishu_bai"
        android:text="百位"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lt_color_text6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_choose_weishu_shi"
        android:text="十位"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lt_color_text6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_choose_weishu_g"
        android:text="个位"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/lt_color_text6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>