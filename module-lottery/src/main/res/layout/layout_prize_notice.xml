<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prizeNoticeWrapper"
        android:layout_width="306dp"
        android:layout_height="138dp"
        android:layout_gravity="center|top"
        android:layout_margin="16dp"
        android:background="@mipmap/prize_bg">

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="45dp"
            android:text="88 元"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/issueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="期号：20240501"
            android:textColor="@color/clr_bg_main"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/moneyText"
            app:layout_constraintTop_toBottomOf="@+id/moneyText" />

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="22dp"
            android:layout_marginTop="12dp"
            android:src="@mipmap/prize_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
