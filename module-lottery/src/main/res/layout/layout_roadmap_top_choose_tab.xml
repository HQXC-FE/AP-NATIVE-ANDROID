<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:gravity="center_vertical"
    android:animateLayoutChanges="true"
    >

   <LinearLayout
       android:id="@+id/ll_chose_weishu"
       android:orientation="vertical"
       android:paddingRight="8dp"
       android:gravity="center"
       android:visibility="gone"
       android:layout_width="wrap_content"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/tv_choose_weishu"
           android:text="万位"
           android:textSize="14sp"
           android:gravity="center"
           android:layout_gravity="center"
           android:layout_marginTop="2dp"
           android:drawableRight="@drawable/ic_roadmap_down"
           android:drawablePadding="8dp"
           android:textColor="@color/lt_color_text6"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

       <View
           android:layout_width="match_parent"
           android:layout_height="0.5dp"
           android:background="#F2F3F7"
           android:layout_marginTop="2dp"
           />



   </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_dxds"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_dx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="大小"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_ds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:gravity="center"
            android:text="单双"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />
    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/hsv_longhu_tab"
        android:visibility="gone"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_w_vs_qian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="万v千"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_w_vs_bai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="万v百"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_w_vs_shi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="万v十"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_w_vs_ge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="万v个"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />


        <TextView
            android:id="@+id/tv_q_vs_bai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="千v百"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_q_vs_shi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="千v十"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_q_vs_ge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="千v个"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_b_vs_shi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="百v十"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_b_vs_ge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="百v个"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        <TextView
            android:id="@+id/tv_s_vs_ge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="8dp"
            android:text="十v个"
            android:textSize="14sp"
            android:textColor="@drawable/lt_selector_roadmap_top_choose"
            />

        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/tv_zxduizi"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="庄闲对子"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/black"
        />






</LinearLayout>