<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/me_login_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/login_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/me_login_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/login_sub_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_login_sub_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_header" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/login_sub_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/login_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:background="@mipmap/me_login_area_bg"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/me_login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/me_login"
                        android:textSize="@dimen/me_text_sp20"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/me_login_title">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_account"
                                style="@style/style_cm_edt_account"
                                android:hint="@string/txt_user_name_should_6_12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/me_input_bg">

                            <EditText
                                android:id="@+id/edt_pwd"
                                style="@style/style_cm_edt_pwd"
                                android:hint="@string/txt_pwd_should_6_16_hint" />

                            <CheckBox
                                android:id="@+id/ckb_eye"
                                style="@style/style_cm_ckb_eye" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_login_verification"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <EditText
                                android:id="@+id/edt_login_verification"
                                style="@style/style_cm_verification"
                                android:hint="@string/txt_verification_hint"
                                android:layout_weight="4"/>
                            <ImageView
                                android:id="@+id/iv_login_verification"
                                style="@style/style_cm_image_verification"
                                android:layout_marginLeft="10dp"
                                android:hint="@string/txt_verification_hint" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvw_pwd_check_login_verification"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_verification_is_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/ckb_remember_pwd"
                                style="@style/style_cm_ckb_normal"
                                android:text="@string/me_pwd_rember" />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvw_forget_pwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/me_pwd_forget"
                                android:textColor="@color/me_text_forget_pwd"
                                android:textSize="@dimen/me_test_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/ckb_agreement"
                                style="@style/style_cm_ckb_normal"
                                android:checked="true"
                                android:text="@string/me_agreement_hint" />

                            <TextView
                                android:id="@+id/tvw_agreement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/me_agreement_content"
                                android:textColor="@color/me_text_agreement"
                                android:textSize="@dimen/me_text_size_sp12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@mipmap/me_login_logout_bg"
                            android:text="@string/me_login"
                            android:textColor="@color/white" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp">

                            <TextView
                                android:id="@+id/tvw_skip_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:text="@string/me_go_round"
                                android:textColor="@color/clr_black"
                                android:textSize="@dimen/me_text_size_sp12sp" />

                            <TextView
                                android:id="@+id/tvw_cs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="@string/me_online_service"
                                android:textColor="@color/clr_black"
                                android:textSize="@dimen/me_text_size_sp12sp" />

                        </RelativeLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/to_register_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@mipmap/me_login_recg"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/me_login_register" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/to_login_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@mipmap/me_to_login_bg"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/me_back_login_bg" />
                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/me_register_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    android:background="@mipmap/me_register_area_bg"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/me_register_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/me_register"
                        android:textSize="@dimen/me_text_sp20"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/me_register_title">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_acc_reg"
                                style="@style/style_cm_edt_account"
                                android:hint="@string/txt_user_name_should_6_12" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_username_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_username_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg">

                            <EditText
                                android:id="@+id/edt_pwd1"
                                style="@style/style_cm_edt_pwd"
                                android:hint="@string/txt_pwd_should_6_16_hint" />

                            <CheckBox
                                android:id="@+id/ckb_pwd1"
                                style="@style/style_cm_ckb_eye" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_pwd_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_pwd_cannot_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg">

                            <EditText
                                android:id="@+id/edt_pwd2"
                                style="@style/style_cm_edt_pwd"
                                android:hint="@string/txt_pwd_should_6_16_hint" />

                            <CheckBox
                                android:id="@+id/ckb_pwd2"
                                style="@style/style_cm_ckb_eye" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_pwd_check_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_pwd_is_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/ll_edt_verification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <EditText
                                android:id="@+id/edt_verification"
                                style="@style/style_cm_verification"
                                android:hint="@string/txt_verification_hint"
                                android:layout_weight="4"/>
                            <ImageView
                                android:id="@+id/iv_verification"
                                style="@style/style_cm_image_verification"
                                android:layout_marginLeft="10dp"
                                android:hint="@string/txt_verification_hint" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvw_pwd_check_verification"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_verification_is_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/register_agreement_checkbox"
                                style="@style/PwdCheckboxStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="2dp"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:text="@string/me_agreement_hint"
                                android:textSize="@dimen/me_text_size_sp12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvw_agreement_register"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/me_agreement_content"
                                android:textColor="@color/me_text_agreement"
                                android:textSize="@dimen/me_text_size_sp12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/btn_register"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/bg_register_unable"
                            android:text="@string/me_register"
                            android:textColor="@color/white" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvw_register_warning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_register_warning"
                android:paddingStart="24dp"
                android:paddingTop="6dp"
                android:paddingEnd="6dp"
                android:paddingBottom="6dp"
                android:text="为保护您的个人信息安全，防止盗号风险，不要用QQ号和手机号做为您的用户名哦！"
                app:layout_constraintEnd_toEndOf="@id/ll_content"
                app:layout_constraintStart_toStartOf="@id/ll_content"
                app:layout_constraintTop_toBottomOf="@id/ll_content" />

            <ImageView
                android:id="@+id/ivw_register_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="6dp"
                android:src="@mipmap/ic_warning_hint"
                app:layout_constraintStart_toStartOf="@id/tvw_register_warning"
                app:layout_constraintTop_toTopOf="@id/tvw_register_warning" />

            <TextView
                android:id="@+id/tv_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换环境"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>