<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?attr/login_activity_attr"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/login_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:src="@mipmap/me_login_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tvRegisterLoginChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="@string/me_login"
                android:textColor="@color/buttonText"
                app:layout_constraintTop_toTopOf="@+id/login_header"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                />

            <ImageView
                android:id="@+id/login_sub_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_login_sub_header"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_header"
                android:visibility="invisible"/>
            <!--注册页面-->
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/login_sub_header"

                >
                <!--注册-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/me_register_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    style="?attr/login_ac_backgroup_attr"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <TextView
                        android:id="@+id/me_register_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/me_register"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="invisible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/me_register_title">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edt_acc_reg"
                                style="@style/style_cm_edt_account"
                                android:hint="@string/txt_user_name_should_6_12" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_username_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_username_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg">

                            <EditText
                                android:id="@+id/edt_pwd1"
                                style="@style/style_cm_edt_pwd"
                                android:hint="@string/txt_pwd_should_6_16_hint" />

                            <CheckBox
                                android:id="@+id/ckb_pwd1"
                                style="@style/style_cm_ckb_eye" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_pwd_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_pwd_cannot_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/me_input_bg">

                            <EditText
                                android:id="@+id/edt_pwd2"
                                style="@style/style_cm_edt_pwd"
                                android:hint="@string/txt_pwd_should_6_16_hint" />

                            <CheckBox
                                android:id="@+id/ckb_pwd2"
                                style="@style/style_cm_ckb_eye" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvw_pwd_check_warning"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_pwd_is_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/ll_edt_verification"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <EditText
                                android:id="@+id/edt_verification"
                                style="@style/style_cm_verification"
                                android:hint="@string/txt_verification_hint"
                                android:layout_weight="4"/>
                            <ImageView
                                android:id="@+id/iv_verification"
                                style="@style/style_cm_image_verification"
                                android:layout_marginLeft="10dp"
                                android:hint="@string/txt_verification_hint" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvw_pwd_check_verification"
                            style="@style/style_cm_tip_small_orange"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="2dp"
                            android:text="@string/txt_verification_is_empty"
                            android:visibility="invisible"
                            tools:visibility="visible" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--登錄-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/me_login_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11"
                    style="?attr/login_ac_backgroup_attr"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/me_login_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:text="@string/me_register"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:visibility="invisible"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/me_login_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_login_edite"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_account"
                            style="@style/style_cm_edt_account"
                            android:hint="@string/txt_user_name_should_6_12" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/bg_login_edite">

                        <EditText
                            android:id="@+id/edt_pwd"
                            style="@style/style_cm_edt_pwd"
                            android:hint="@string/txt_pwd_should_6_16_hint" />

                        <CheckBox
                            android:id="@+id/ckb_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/style_cm_ckb_eye"

                            android:background="@null"/>
                    </LinearLayout>
                        <!-- style="?attr/login_eye_backgroup_attr"-->
                    <LinearLayout
                        android:id="@+id/ll_login_verification"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <EditText
                            android:id="@+id/edt_login_verification"
                            style="@style/style_cm_verification"
                            android:hint="@string/txt_verification_hint"
                            android:layout_weight="4"/>
                        <ImageView
                            android:id="@+id/iv_login_verification"
                            style="@style/style_cm_image_verification"
                            android:layout_marginLeft="10dp"
                            android:hint="@string/txt_verification_hint" />

                    </LinearLayout>
                        <TextView
                        android:id="@+id/tvw_pwd_check_login_verification"
                        style="@style/style_cm_tip_small_orange"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/txt_verification_is_empty"
                        android:visibility="invisible"
                        tools:visibility="visible" />

                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                             android:layout_marginStart="20dp"
                             android:layout_marginEnd="20dp"
                            android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/ckb_remember_pwd"
                                    style="@style/style_cm_ckb_normal"
                                     android:text="@string/me_pwd_rember" />

                                 <View
                                    android:layout_width="wrap_content"
                                     android:layout_height="1dp"
                                     android:layout_weight="1" />

                                <TextView
                                     android:id="@+id/tvw_forget_pwd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/me_pwd_forget"
                                    android:textColor="@color/textForgetPwdColor"
                                     android:textSize="@dimen/me_test_size" />
                     </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:layout_constraintTop_toBottomOf="@+id/ll_content"
               app:layout_constraintStart_toStartOf="@+id/ll_content"
               app:layout_constraintEnd_toEndOf="@+id/ll_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/llRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                       >

                        <CheckBox
                            android:id="@+id/ckb_agreement"
                            style="@style/style_cm_ckb_normal"
                            android:checked="true"
                            android:text="@string/me_agreement_hint" />

                        <TextView
                            android:id="@+id/tvwAgreement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/me_agreement_content"
                            android:textColor="@color/textAgreementColor"
                            android:textSize="@dimen/me_text_size_sp12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        style="?attr/common_btn_attr"
                        android:text="@string/me_login_sure_register"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@+id/llRegister"/>

                    <TextView
                        android:id="@+id/tvwLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/txt_register_bottom_login"
                        android:textColor="@color/me_text_agreement"
                        android:textSize="@dimen/me_text_size_sp12sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/btn_login"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
           </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>