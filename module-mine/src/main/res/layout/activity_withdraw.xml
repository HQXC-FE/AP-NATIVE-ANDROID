<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.xtree.mine.ui.viewmodel.MyWalletViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                style="@style/style_cm_title"
                android:text="提款"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivw_cs"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_cs" />

                <ImageView
                    android:id="@+id/ivw_msg"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_msg" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/clr_grey_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:background="@mipmap/cm_bg_center"
            android:orientation="vertical"
            android:paddingStart="@dimen/layout_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中心钱包"
                    android:textColor="@color/clr_white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:background="@mipmap/me_bg_wd_1k"
                    android:drawableStart="@mipmap/cm_ic_cny"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingStart="4dp"
                    android:text="一键回收"
                    android:textColor="@color/clr_white"
                    android:textSize="11sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:background="@mipmap/me_ic_auto_trans"
                    android:gravity="center_vertical"
                    android:paddingStart="8dp"
                    android:text="自动免转"
                    android:textColor="@color/clr_white"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvw_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:textColor="@color/clr_white"
                android:textSize="24sp"
                tools:text="9,999.0000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="锁定钱包"
                android:textColor="@color/clr_white"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0000"
                android:textColor="@color/clr_white"
                android:textSize="16sp"
                tools:text="999.0000" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:text="可用提款余额: 0元，其中 0元可以使用虚拟币提款取出"
            android:textColor="@color/clr_txt_grey_07"
            android:textSize="12sp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:orientation="horizontal">

            <RadioButton
                style="@style/style_rdo_wd_menu"
                android:text="银行卡提款" />

            <RadioButton
                style="@style/style_rdo_wd_menu"
                android:text="USDT提款" />

            <RadioButton
                style="@style/style_rdo_wd_menu"
                android:text="EBPAY提款" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:text="卡片数量 （1/5）"
            android:textColor="@color/clr_grey_40"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_ic_wd_usdt" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin"
                android:src="@mipmap/me_ic_wd_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin"
                android:src="@mipmap/me_ic_wd_od_01_ck" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_ic_wd_od_02" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/me_ic_wd_od_03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:text="注意：每天限制提款 5 次，您已提款 0 次，提款时间为 00:01 至 00:00 您今日剩余提款额度为 200,000.00 元"
            android:textColor="@color/clr_txt_grey_07"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_step_01"
            style="@style/style_wd_info_area">

            <LinearLayout style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="用户名：" />

                <TextView
                    android:id="@+id/tvw_user_name1"
                    style="@style/style_wd_info_value"
                    android:textColor="@color/clr_grey_80"
                    tools:text="DEMO" />
            </LinearLayout>

            <LinearLayout

                style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="可提款金额：" />

                <TextView
                    android:id="@+id/tvw_wd_amount_all"
                    style="@style/style_wd_info_value"
                    android:text="0.0000"
                    tools:text="999.0000" />
            </LinearLayout>

            <EditText
                android:id="@+id/edt_amount"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginEnd="@dimen/layout_margin"
                android:background="@mipmap/cm_bg_input"
                android:hint="请输入想提现金额"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLength="15"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/clr_grey_00"
                android:textColorHint="@color/clr_grey_20"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvw_step_01c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin"
                android:layout_marginTop="8dp"
                android:drawableStart="@mipmap/cm_ic_hint_purple"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:text="单笔取款范围 100-300000 元"
                android:textColor="@color/clr_grey_40"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_step_01d"
                style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="实际提款金额：" />

                <TextView
                    android:id="@+id/tvw_wd_amount333"
                    style="@style/style_wd_info_value"
                    android:text="0.0000"
                    tools:text="999.0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_step_02"
            style="@style/style_wd_info_area"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="用户名：" />

                <TextView
                    android:id="@+id/tvw_user_name"
                    style="@style/style_wd_info_value"
                    android:textColor="@color/clr_grey_80"
                    tools:text="DEMO" />
            </LinearLayout>


            <LinearLayout style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="提款金额：" />

                <TextView
                    android:id="@+id/tvw_wd_amount"
                    style="@style/style_wd_info_value"
                    android:text="0.0000"
                    tools:text="999.0000" />
            </LinearLayout>

            <LinearLayout style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="手续费：" />

                <TextView
                    android:id="@+id/tvw_fee"
                    style="@style/style_wd_info_value"
                    android:text="0.0000"
                    tools:text="9.0000" />
            </LinearLayout>

            <LinearLayout style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title"
                    android:text="到账金额：" />

                <TextView
                    android:id="@+id/tvw_real_amount"
                    style="@style/style_wd_info_value"
                    android:text="0.0000"
                    tools:text="999.0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bank_1"
                style="@style/style_wd_info_ll">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="开户行名称：" />

                <TextView
                    android:id="@+id/tvw_bank_name"
                    style="@style/style_wd_info_value2"
                    tools:text="工商银行" />

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="开户行城市：" />

                <TextView
                    android:id="@+id/tvw_bank_city"
                    style="@style/style_wd_info_value2"
                    tools:text="北京" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_bank_2"
                style="@style/style_wd_info_ll"
                android:layout_marginBottom="4dp">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="开户名：" />

                <TextView
                    android:id="@+id/tvw_acc_name"
                    style="@style/style_wd_info_value2"
                    tools:text="TOM" />

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="银行账户：" />

                <TextView
                    android:id="@+id/tvw_account"
                    style="@style/style_wd_info_value2"
                    tools:text="622************0214" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ebpay_1"
                style="@style/style_wd_info_ll"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="EBPAY账户：" />

                <TextView
                    android:id="@+id/tvw_eb_acc"
                    style="@style/style_wd_info_value2"
                    tools:text="EB1F***3AFA" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ebpay_2"
                style="@style/style_wd_info_ll"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="提款地址：" />

                <TextView
                    android:id="@+id/tvw_eb_address"
                    style="@style/style_wd_info_value2"
                    tools:text="622***0214" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_usdt_1"
                style="@style/style_wd_info_ll"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="EBPAY账户：" />

                <TextView
                    android:id="@+id/tvw_usdt_acc"
                    style="@style/style_wd_info_value2"
                    tools:text="123QWE" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_usdt_2"
                style="@style/style_wd_info_ll"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    style="@style/style_wd_info_title2"
                    android:text="提款地址：" />

                <TextView
                    android:id="@+id/tvw_usdt_address"
                    style="@style/style_wd_info_value2"
                    tools:text="622***0214" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_step_03"
            style="@style/style_wd_info_area"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:src="@mipmap/me_img_wd_suc" />

            <TextView
                android:id="@+id/tvw_withdraw_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="还要提现"
                android:textColor="@color/clr_blue_03" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cm_btn_next" />

    </LinearLayout>

</layout>
