<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_solide_white_c12"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_dialog_top_main"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/clr_white"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="标题" />

            <ImageView
                android:id="@+id/ivw_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="close"
                android:padding="4dp"
                android:src="@mipmap/ic_pop_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/dialog_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/clr_main_start"
            android:textColor="@color/clr_white"
            android:textColorHint="@color/clr_white"
            android:hint="搜索开户银行" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/clr_main_start"
            android:paddingBottom="12dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
