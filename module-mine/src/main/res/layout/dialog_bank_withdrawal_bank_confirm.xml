<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_bank_root"
    style="@style/style_item_ll_row"
    android:background="@color/bg_main"
    android:orientation="vertical"
    android:padding="8dp"
    tools:ignore="MissingDefaultResource">

    <!--显示状态 2 确认提款信息View-->
    <LinearLayout
        android:id="@+id/ll_virtual_confirm_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:visibility="visible">
        <!--确认提款信息-->

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_withdrawal_user_name" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/style_withdraw_confirm_value"
                tools:text="DEMO" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_confirm_withdrawal_amount" />

            <TextView
                android:id="@+id/tv_confirm_withdrawal_type_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_actual_withdrawal_amount" />

            <TextView
                android:id="@+id/tv_withdrawal_amount_type_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_bank_name_open" />

            <TextView
                android:id="@+id/tv_withdrawal_bank_name_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_bank_name_location" />

            <TextView
                android:id="@+id/tv_withdrawal_bank_address_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_account_name" />

            <TextView
                android:id="@+id/tv_withdrawal_address_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <LinearLayout style="@style/style_withdraw_confirm_ll">

            <TextView
                style="@style/style_withdraw_show_title"
                android:text="@string/txt_bank_account" />

            <TextView
                android:id="@+id/tv_withdrawal_handling_fee_show"
                style="@style/style_withdraw_confirm_value"
                tools:text="" />
        </LinearLayout>

        <View style="@style/style_withdraw_dividing_line" />

        <TextView
            android:id="@+id/iv_confirm_next"
            style="?attr/withdrawal_btn_next_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/txt_next" />

        <TextView
            android:id="@+id/iv_confirm_previous"
            style="?attr/withdrawal_btn_previous_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_confirm_next"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/txt_recharge_view_pro" />

    </LinearLayout>

    <include
        android:id="@+id/ll_over_apply"
        layout="@layout/dialog_withdraw_money_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" />
    <!--显示状态 3 确认提款信息View-->

</LinearLayout>