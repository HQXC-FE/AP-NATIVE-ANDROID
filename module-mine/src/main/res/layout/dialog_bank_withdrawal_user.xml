<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_transparent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog_top_choose"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />
                            <TextView
                                android:id="@+id/tv_user_name"
                                android:text="@string/txt_user_name"
                                android:textSize="12sp"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_user_name_show"
                                android:layout_toRightOf="@id/tv_user_name"
                                android:layout_marginLeft="70dp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />
                            <TextView
                                android:id="@+id/tv_withdrawal_type"
                                android:text="@string/txt_withdrawal_enm"
                                android:textSize="12sp"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_withdrawal_type_show"
                                android:layout_toRightOf="@id/tv_withdrawal_type"
                                android:layout_marginLeft="58dp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />
                            <TextView
                                android:id="@+id/tv_withdrawal_amount"
                                android:text="@string/txt_confirm_withdrawal_amount"
                                android:textSize="12sp"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_withdrawal_amount_show"
                                android:layout_toRightOf="@id/tv_withdrawal_amount"
                                android:layout_marginLeft="45dp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <TextView
                                android:id="@+id/tv_withdrawal_amount_left_show"
                                android:text="@string/txt_withdrawal_method_tip"
                                android:textSize="12sp"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_user_name_show1"
                                android:layout_toRightOf="@id/tv_withdrawal_amount_left_show"
                                android:layout_marginLeft="70dp"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >
                            <TextView
                                android:id="@+id/tv_mini_single_withdrawal"
                                android:text="@string/txt_withdrawal_min"
                                android:textSize="12sp"
                                android:textColor="@color/red"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_withdrawal_type_show1"
                                android:layout_toRightOf="@id/tv_mini_single_withdrawal"
                                android:layout_marginLeft="1dp"
                                android:textSize="12sp"
                                android:textColor="@color/red"
                                android:text=""
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </RelativeLayout>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/style_withdraw_money_bg"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_withdraw_money_input">

                        <ImageView
                            android:id="@+id/iv_input_money"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/me_icon_wlt_bank"/>
                        <EditText
                            android:id="@+id/et_input_money"

                            android:layout_marginLeft="18dp"
                            android:layout_alignLeft="@id/iv_input_money"
                            android:hint="@string/txt_input_money"
                            style="@style/style_bank_edit"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_amount_view"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    style="@style/style_withdraw_money_bg"
                    android:visibility="gone"
                    android:orientation="horizontal">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                     >
                      <RelativeLayout
                          android:layout_width="match_parent"
                          android:layout_height="match_parent" >
                          <!--  android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginTop="10dp"
                              android:textSize="18sp"
                              android:textFontWeight="500"
                              android:textColor="@color/cl_withdrawal_amount"-->
                          <TextView
                              android:id="@+id/tv_withdrawal_amount_left"
                              android:text="@string/txt_actual_withdrawal_amount"
                              style="@style/style_withdraw_title"
                              />
                          <TextView
                              android:id="@+id/tv_withdrawal_amount_right"
                              android:layout_below="@id/tv_withdrawal_amount_left"
                              android:layout_marginTop="5dp"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:text="0.00"
                              android:textSize="22sp"
                              android:textColor="@color/cl_withdrawal_amount"/>
                          <View
                              android:layout_width="match_parent"
                              android:layout_height="1dp"
                              android:layout_marginTop="4dp"
                              android:background="@color/clr_gap_bg"
                              android:layout_below="@id/tv_withdrawal_amount_right"/>

                      </RelativeLayout>
                  </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_payee_bank_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_payee_bank_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_payee_bank_card"
                                android:textSize="18sp"
                                android:textFontWeight="500"
                                android:textColor="@color/cl_withdrawal_amount"
                                />

                            <LinearLayout
                                android:id="@+id/ll_bank_card_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/tv_payee_bank_card"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" >
                                    <ImageView
                                        android:id="@+id/iv_payee_bank_card"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginRight="10dp"
                                        android:background="@mipmap/bt_icon_expand">
                                    </ImageView>
                                    <TextView
                                        android:textSize="22sp"
                                        android:text=""
                                        android:layout_centerVertical="true"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="-1dp"
                                android:background="@color/clr_gap_bg"
                                android:layout_below="@id/ll_bank_card_number"/>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/bt_text_20sp"
                    android:layout_height="200dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_withdrawal_next"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/cm_btn_withdrawal_next"/>
                        <TextView
                            android:id="@+id/tv_withdrawal_tip"
                            android:text="@string/txt_kind_tips"
                            android:layout_below="@id/iv_withdrawal_next"
                            android:textSize="@dimen/bt_text_14sp"
                            style="?attr/channelTextSelectAttr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_withdrawal_content"
                            android:text="@string/txt_kind_tips_count"
                            android:layout_marginTop="4dp"
                            android:layout_below="@id/tv_withdrawal_tip"
                            android:textSize="@dimen/bt_text_14sp"
                            android:textColor="@color/cl_withdrawal_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>