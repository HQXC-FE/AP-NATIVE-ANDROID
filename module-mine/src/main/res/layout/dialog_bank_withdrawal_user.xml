<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_transparent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_dialog_top_choose"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />

                            <TextView
                                android:id="@+id/tv_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/txt_user_name"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_user_name_show"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="70dp"
                                android:layout_toRightOf="@id/tv_user_name"
                                android:text="" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />

                            <TextView
                                android:id="@+id/tv_withdrawal_type"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/txt_withdrawal_enm"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_withdrawal_type_show"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="58dp"
                                android:layout_toRightOf="@id/tv_withdrawal_type"
                                android:text="" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/clr_gap_bg" />

                            <TextView
                                android:id="@+id/tv_withdrawal_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/txt_confirm_withdrawal_amount"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_withdrawal_amount_show"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="45dp"
                                android:layout_toRightOf="@id/tv_withdrawal_amount"
                                android:text="" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_withdrawal_amount_left_show"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/txt_withdrawal_method_tip"
                                android:textColor="@color/clr_txt_withdraw_money"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_user_name_show1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="70dp"
                                android:layout_toRightOf="@id/tv_withdrawal_amount_left_show"
                                android:text="" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_mini_single_withdrawal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/txt_withdrawal_min"
                                android:textColor="@color/red"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_withdrawal_type_show1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_toRightOf="@id/tv_mini_single_withdrawal"
                                android:text=""
                                android:textColor="@color/red"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    style="@style/style_withdraw_money_bg"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_withdraw_money_input">

                        <ImageView
                            android:id="@+id/iv_input_money"
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/me_icon_wlt_bank" />

                        <EditText
                            android:id="@+id/et_input_money"

                            style="@style/style_bank_edit"
                            android:layout_alignLeft="@id/iv_input_money"
                            android:layout_marginLeft="18dp"
                            android:hint="@string/txt_input_money" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_amount_view"
                    style="@style/style_withdraw_money_bg"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <!--  android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="18sp"
                                android:textFontWeight="500"
                                android:textColor="@color/cl_withdrawal_amount"-->
                            <TextView
                                android:id="@+id/tv_withdrawal_amount_left"
                                style="@style/style_withdraw_title"
                                android:text="@string/txt_actual_withdrawal_amount" />

                            <TextView
                                android:id="@+id/tv_withdrawal_amount_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tv_withdrawal_amount_left"
                                android:layout_marginTop="5dp"
                                android:text="0.00"
                                android:textColor="@color/cl_withdrawal_amount"
                                android:textSize="22sp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/tv_withdrawal_amount_right"
                                android:layout_marginTop="4dp"
                                android:background="@color/clr_gap_bg" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_payee_bank_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_payee_bank_card"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/txt_payee_bank_card"
                                android:textColor="@color/cl_withdrawal_amount"
                                android:textFontWeight="500"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:id="@+id/ll_bank_card_number"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@id/tv_payee_bank_card"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:id="@+id/iv_payee_bank_card"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="10dp"
                                        android:background="@mipmap/bt_icon_expand"></ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text=""
                                        android:textSize="22sp" />

                                </RelativeLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@id/ll_bank_card_number"
                                android:layout_marginTop="-1dp"
                                android:background="@color/clr_gap_bg" />

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="@dimen/bt_text_20sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/iv_withdrawal_next"
                            style="?attr/withdrawal_btn_next_attr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="@string/txt_next" />

                        <TextView
                            android:id="@+id/tv_withdrawal_tip"
                            style="?attr/channelTextSelectAttr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_withdrawal_next"
                            android:text="@string/txt_kind_tips"
                            android:textSize="@dimen/bt_text_14sp" />

                        <TextView
                            android:id="@+id/tv_withdrawal_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_withdrawal_tip"
                            android:layout_marginTop="4dp"
                            android:text="@string/txt_kind_tips_count"
                            android:textColor="@color/cl_withdrawal_tip"
                            android:textSize="@dimen/bt_text_14sp" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>