<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_transparent"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:id="@+id/bg_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/cm_bg_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-1dp"
        android:background="@color/clr_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="投注详情"
            android:textColor="@color/clr_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="close"
            android:padding="4dp"
            android:src="@mipmap/ic_pop_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="账号：" />

                <TextView
                    android:id="@+id/tvw_username"
                    style="@style/style_item_report_value_2"
                    tools:text="tom" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="VIP等级：" />

                <TextView
                    android:id="@+id/tvw_vip"
                    style="@style/style_item_report_value_2"
                    tools:text="经典**乐" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="订单号：" />

                <TextView
                    android:id="@+id/tvw_game_code"
                    style="@style/style_item_report_value_2"
                    tools:text="73234576653****7766" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="@string/txt_bt_time_s" />

                <TextView
                    android:id="@+id/tvw_game_date"
                    style="@style/style_item_report_value_2"
                    tools:text="2024-01-13 13:53:53" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="场馆：" />

                <TextView
                    android:id="@+id/tvw_venue"
                    style="@style/style_item_report_value_2"
                    tools:text="AAA" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="@string/txt_game_name_s" />

                <TextView
                    android:id="@+id/tvw_game_name"
                    style="@style/style_item_report_value_2"
                    tools:text="跑得快" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="投注额：" />

                <TextView
                    android:id="@+id/tvw_bet"
                    style="@style/style_item_report_value_2"
                    tools:text="1.8000" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="状态：" />

                <TextView
                    android:id="@+id/tvw_bt_result"
                    style="@style/style_item_report_value_2"
                    tools:text="AAA" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="派彩：" />

                <TextView
                    android:id="@+id/tvw_win"
                    style="@style/style_item_report_value_2"
                    android:textColor="@color/clr_red_01"
                    tools:text="3.51" />
            </LinearLayout>

            <LinearLayout style="@style/style_item_ll_row_2">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:text="结算时间：" />

                <TextView
                    android:id="@+id/tvw_winlostdatetime"
                    style="@style/style_item_report_value_2"
                    tools:text="2024-01-13 13:56:02" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_item_ll_row_2"
                android:visibility="visible"
                tools:visibility="visible">

                <TextView
                    style="@style/style_item_report_title_end2"
                    android:layout_height="match_parent"
                    android:text="提前结算：" />

                <TextView
                    android:id="@+id/tvw_advance_settle"
                    style="@style/style_item_report_value_2"
                    android:text="--"
                    tools:text="否" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_advance_settle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tvw_betting_detail_title"
                    style="@style/style_item_report_title_end2"
                    android:text="下注内容："
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ll_bet_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:background="@drawable/bg_white_4"
                    android:padding="3dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvw_betting_detail_title"
                    app:layout_constraintTop_toTopOf="@id/tvw_betting_detail_title"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvw_bet_title"
                        style="@style/style_item_report_value_2"
                        android:layout_width="0dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="3x4*4" />

                    <TextView
                        android:id="@+id/tvw_bet_content"
                        style="@style/style_item_report_value_2"
                        android:layout_width="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvw_bet_title"
                        tools:text="全场 滚球 0.81" />

                    <!--<LinearLayout style="@style/style_item_ll_row_2">-->

                    <!--    <TextView-->
                    <!--        android:id="@+id/tvw_competition_name"-->
                    <!--        style="@style/style_item_report_value"-->
                    <!--        tools:text="NCAA美国大学生篮球联赛 " />-->
                    <!--</LinearLayout>-->

                    <!--<LinearLayout style="@style/style_item_ll_row_2">-->

                    <!--    <TextView-->
                    <!--        android:id="@+id/tvw_game_type"-->
                    <!--        style="@style/style_item_report_value"-->
                    <!--        tools:text="Basketball(2024-01-12 13:00:00)" />-->
                    <!--</LinearLayout>-->

                    <!--<LinearLayout style="@style/style_item_ll_row_2">-->

                    <!--    <TextView-->
                    <!--        android:id="@+id/tvw_match_name"-->
                    <!--        style="@style/style_item_report_value"-->
                    <!--        tools:text="Hawaii Rainbow Warriors vs UC Irvine Anteaters" />-->
                    <!--</LinearLayout>-->

                    <include
                        android:id="@+id/ll_detail"
                        layout="@layout/layout_bt_detail_match"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvw_bet_content"
                        tools:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>