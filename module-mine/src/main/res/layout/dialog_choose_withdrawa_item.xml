<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/bt_text_10sp"
            android:layout_marginLeft="@dimen/bt_text_20sp"
            android:layout_marginRight="@dimen/bt_text_20sp"
            android:padding="5dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <LinearLayout
                    android:id="@+id/ll_choose_usdt"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:background="@drawable/bg_dialog_choose">
                    <TextView
                        android:id="@+id/tv_choose_usdt"
                        android:text="@string/app_name"
                        style="@style/style_choose_withdrawal"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

</LinearLayout>