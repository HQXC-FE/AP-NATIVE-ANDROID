<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- <data>

         <variable
             name="viewModel"
             type="com.xtree.recharge.ui.viewmodel.ChooseWithdrawViewModel" />
     </data>-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.xtree.mine.ui.activity.CustomerServiceActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@color/white">

            <TextView
                style="@style/style_cm_title"
                android:textColor="@color/clr_awards_txt_black"
                android:text="@string/txt_question"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F2F3F7">
            <LinearLayout
                android:id="@+id/custom_choose_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/custom_app_cl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >
                    <TextView
                        android:id="@+id/tvCustomerServiceTip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新增"
                        android:textSize="@dimen/bt_text_16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/custom_app_cl"
                        app:layout_constraintTop_toTopOf="@id/custom_app_cl"
                        />
                    <TextView
                        android:id="@+id/tvCustomerServiceDetailed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/bt_text_14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/tvCustomerServiceTip"
                        app:layout_constraintTop_toBottomOf="@id/tvCustomerServiceTip"
                        />
                    <TextView
                        android:id="@+id/tvCustomerServiceDetailedTip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/bt_text_12sp"
                        app:layout_constraintStart_toStartOf="@id/tvCustomerServiceDetailed"
                        app:layout_constraintTop_toBottomOf="@id/tvCustomerServiceDetailed"
                        android:visibility="gone"
                        />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>