<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.xtree.mine.ui.rebateagrt.viewmodel.RebateAgrtSearchUserViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_overall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="全选清空"
            android:textSize="14sp"
            android:textColor="@color/color_5B5B6A"
            android:layout_marginStart="2dp"
            android:onClick="@{() -> model.overall()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@{model.pickNums}"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:background="@drawable/shape_stroke_247bf4_1_corner_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="1"
            />

        <TextView
            android:id="@+id/item_search"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="用户名"
            android:textColor="@color/color_99A0B1"
            android:textSize="14sp"
            android:gravity="bottom|start"
            app:layout_constraintTop_toBottomOf="@id/item_overall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:hint="用户名模糊查找"
            android:textColor="@color/color_1E1E1E"
            android:textSize="14sp"
            android:gravity="bottom|start"
            android:drawableBottom="@drawable/divider_horizontal"
            android:background="@null"
            textChangedListener="@{model}"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="@id/item_search"
            app:layout_constraintStart_toEndOf="@id/item_search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/item_search"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/item_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="5dp"
            android:text="确认选取"
            android:textColor="@color/color_FFFFFF"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/shape_gradient_247bf4_8bc1ff_corner_10"
            android:onClick="@{() -> model.confirmSelection()}"
            app:layout_constraintTop_toBottomOf="@id/item_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.95"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:itemData="@{model.datas}"
            itemViewType="@{model.itemType}"
            layoutManager="@{model.layoutManager}"
            onBindListener="@{model.onBindListener}"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/item_search"
            app:layout_constraintBottom_toTopOf="@id/item_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>