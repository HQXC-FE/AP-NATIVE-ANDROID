<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root_reset_psw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivw_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="4dp"
            android:src="@mipmap/cm_dialog_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_empty"
            android:layout_width="24dp"
            android:layout_height="16dp"
            android:background="@color/clr_transparent"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg" />

        <ImageView
            android:id="@+id/ivw_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cm_dialog_bell"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivw_empty" />

        <TextView
            android:id="@+id/tvw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/txt_reset_fund_psw"
            android:textColor="@color/clr_black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toTopOf="@id/ivw_bg" />
        <EditText
            android:id="@+id/ed_first"

            style="@style/style_set_security_question_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="52dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:hint="@string/txt_reset_fund_psw_tip"
            android:textColor="@color/clr_grey_60"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toBottomOf="@id/tvw_title" />
        <EditText
            android:id="@+id/ed_second"
            style="@style/style_set_security_question_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="52dp"
            android:gravity="center"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:hint="@string/txt_fund_psw_again_tip"
            android:textColor="@color/clr_grey_60"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toBottomOf="@id/ed_first" />

        <!--<EditText
            android:id="@+id/ed_second"
            style="@style/style_set_security_question_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="52dp"
            android:background="@drawable/bg_withdraw_money_input"
            android:gravity="center"
            android:hint="@string/txt_fund_psw_again_tip"
            android:textColor="@color/clr_grey_60"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg"
            app:layout_constraintTop_toBottomOf="@id/ed_first" />-->

        <LinearLayout
            android:id="@+id/layout_tvw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="46dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/ivw_bg"
            app:layout_constraintEnd_toEndOf="@id/ivw_bg"
            app:layout_constraintStart_toStartOf="@id/ivw_bg">

            <TextView
                android:id="@+id/tvw_left"
                style="@style/style_btn_back"
                android:text="@string/txt_cancel"
                android:textColor="@color/clr_txt_grey_04"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvw_right"
                style="@style/style_btn"
                android:text="@string/txt_confirm"
                android:textSize="14sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>