<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/clr_grey_07"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/clr_white">

            <TextView
                android:id="@+id/tvw_title"
                style="@style/style_cm_title"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="@string/txt_bind_alipay1" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/clr_div_line"
            />
        <LinearLayout
            android:id="@+id/ll_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/style_cm_tip_small_orange"
                    android:layout_marginTop="2dp"
                    android:drawableLeft="@mipmap/cm_ic_hint_purple"
                    android:text="@string/txt_note_asterisks_cannot_empty"
                    android:gravity="center"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                style="@style/style_bind_title"
                tools:text="*支付宝姓名" />

            <EditText
                android:id="@+id/et_name"
                style="@style/style_cm_edt"
                android:hint="姓名"
                android:maxLength="19" />

            <TextView
                android:id="@+id/tv_account"
                style="@style/style_bind_title"
                tools:text="*支付宝账号" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/style_cm_edt"
                android:hint="请输入11位手机号码或电子邮箱"
                android:maxLength="30"
                />

            <TextView
                android:id="@+id/tv_nickname"
                style="@style/style_bind_title"
                tools:text="*支付宝昵称" />

            <EditText
                android:id="@+id/et_nickname"
                style="@style/style_cm_edt"
                android:hint="@string/txt_input_nickname" />

            <TextView
                android:id="@+id/tv_tip_nickname"
                style="@style/style_cm_tip_small_orange"
                android:text="注意：如修改昵称请及时更新，否则影响收款"
                android:drawableLeft="@mipmap/cm_ic_hint_red"
                android:textSize="@dimen/bt_text_12sp" />

            <LinearLayout
                android:id="@+id/ll_remittance_screenshot"
                android:layout_width="73dp"
                android:layout_height="73dp"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"
                android:background="@mipmap/rc_ic_feedback_bg">

                <RelativeLayout
                    android:layout_width="73dp"
                    android:layout_height="73dp">

                    <ImageView
                        android:id="@+id/iv_selector_tip_image"
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="1dp"
                        android:layout_marginBottom="1dp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/iv_selector_add"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/cm_ic_add" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_selector_tip_image"
                style="@style/style_fb_tip_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:textSize="14sp"
                tools:text="@string/txt_upload_payment_code" />

            <TextView
                android:id="@+id/tv_payment_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@mipmap/mine_bind_add_check"
                android:paddingLeft="20dp"
                android:paddingTop="6dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:textColor="@color/clr_text_code_selector"
                android:textSize="12sp"
                tools:text="@string/txt_get_payment_code" />

            <ImageView
                android:id="@+id/ivw_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@mipmap/cm_btn_next"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/layout_tvw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvw_bind_back"
                    style="@style/style_btn_short_cancel"
                    android:text="@string/txt_back" />

                <TextView
                    android:id="@+id/tvw_bind_next"
                    style="@style/style_btn_short"
                    android:text="@string/txt_next" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                style="@style/style_bind_title"
                android:drawableLeft="@mipmap/mine_iv_info_review"
                android:drawablePadding="5dp"
                android:layout_marginLeft="50dp"
                android:text="@string/txt_info_review"
                android:textStyle="bold"
                android:textColor="@color/clr_sec_verify_normal"
                android:textSize="@dimen/bt_text_16sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_bind_card_add"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:orientation="vertical"
                    style="@style/style_bind_confirm_ll"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvw_name"
                                style="@style/style_bind_confirm_bank_left_txt"
                                android:layout_width="match_parent"

                                tools:text="@string/txt_alipay_name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tvw_name_content"
                                style="@style/style_bind_confirm_value"
                                tools:text="DEMO"
                                android:layout_gravity="center"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_07"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    style="@style/style_bind_confirm_ll"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_phone"
                            style="@style/style_bind_confirm_bank_left_txt"
                            tools:text="@string/txt_alipay_phone"
                           />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_phone_content"
                            style="@style/style_bind_confirm_value"
                            tools:text="DEMO"
                            android:layout_weight="2.5"/>
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_07"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    style="@style/style_bind_confirm_ll"
                    android:layout_marginTop="12dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_nickname"
                            style="@style/style_bind_confirm_bank_left_txt"
                            tools:text="@string/txt_alipay_nickname"
                           />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_nickname_content"
                            style="@style/style_bind_confirm_value"
                            tools:text="XXX"
                           />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/clr_grey_07"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <LinearLayout
                    style="@style/style_bind_confirm_ll"
                    android:layout_marginTop="12dp"
                   >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_code"
                            style="@style/style_bind_confirm_bank_left_txt"
                            android:layout_marginTop="12dp"
                            tools:text="@string/txt_alipay_code"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/tvw_code1"
                            style="@style/style_bind_confirm_value"
                            android:layout_marginTop="12dp"
                            tools:text="123123"
                            android:visibility="invisible"
                           />
                    </LinearLayout>


                    <!--<ImageView
                        android:id="@+id/iv_code"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="2.5"
                        android:adjustViewBounds="true"

                        />-->
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="180dp"
                    android:layout_height="240dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="20dp"
                    android:adjustViewBounds="true"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/clr_grey_07"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <LinearLayout
                style="@style/style_cm_btn_ll"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvw_back"
                    style="@style/style_btn_short_cancel"
                    android:text="@string/txt_back" />

                <TextView
                    android:id="@+id/tvw_submit"
                    style="@style/style_btn_short"
                    android:text="@string/txt_next" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_recharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_aw_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                tools:text="绑定微信成功"
                android:layout_marginTop="24dp"
                android:textStyle="bold"
                android:textColor="@color/clr_awards_txt_black"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvType"
                style="@style/style_btn_long2"
                android:textSize="@dimen/bt_text_16sp"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                tools:text="@string/txt_go_recharge" />
        </LinearLayout>
    </LinearLayout>
</layout>