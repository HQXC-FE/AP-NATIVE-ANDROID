<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xtree.mine.ui.viewmodel.VerifyViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.BindPhoneFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="为了您的账户资讯与资金安全，请绑定常用手机号!"
            android:textColor="@color/bt_color_blurred"
            android:textSize="@dimen/bt_text_12sp"
            android:gravity="center_vertical|left"
            android:drawableLeft="@drawable/ic_info"
            android:drawablePadding="2dp"
            android:paddingStart="12dp"
            android:background="@color/clr_main_05"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp"
            android:layout_marginStart="16dp"
            android:gravity="center">

            <View
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/bt_color_blurred" />

            <TextView
                android:id="@+id/tvw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_phone_num"
                android:textSize="12sp"
                android:textColor="@color/bt_color_blurred"
                android:layout_marginStart="4dp"/>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:textSize="12sp"
            app:errorTextColor="@color/clr_txt_warn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@mipmap/cm_bg_input">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86 |"
                    android:textSize="14sp"
                    android:textColor="@color/clr_txt_mouse5"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="2dp"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="@string/txt_enter_phone_num"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textSize="14sp"
                    android:textColor="@color/clr_txt_mouse5"/>

            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:gravity="center">

            <View
                android:layout_width="2dp"
                android:layout_height="12dp"
                android:background="@color/bt_color_blurred" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_verify_code"
                android:textSize="12sp"
                android:textColor="@color/bt_color_blurred"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/code_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/layout_margin"
            android:textSize="12sp"
            app:errorTextColor="@color/clr_txt_warn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:background="@mipmap/cm_bg_input">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:hint="@string/txt_enter_code_pls"
                    android:maxLength="6"
                    android:minEms="6"
                    android:textSize="14sp"
                    android:textColor="@color/clr_txt_mouse5"
                    android:paddingStart="8dp"
                    />

                <TextView
                    android:id="@+id/tvw_code"
                    style="@style/style_get_code"
                    android:text="@string/txt_get_code"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            style="@style/style_info_grey_50"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/txt_phone_will_help_u" />

        <TextView
            android:id="@+id/ivw_ok"
            style="@style/style_cm_btn_round"
            android:layout_marginTop="48dp"
            android:text="@string/txt_confirm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="48dp"
            tools:visibility="visible">

            <TextView
                style="@style/style_info2_grey_50"
                android:text="@string/txt_tip_cs_01" />

            <TextView
                android:id="@+id/tvw_cs"
                style="@style/style_info2_grey_50"
                android:text="@string/txt_tip_cs_02"
                android:textColor="@color/clr_txt_mouse5"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"/>

            <TextView
                style="@style/style_info2_grey_50"
                android:text="@string/txt_tip_cs_03" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>