<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.xtree.mine.ui.viewmodel.TransferResultViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/clr_main_bg"
        android:orientation="vertical">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_base_toolbar"
            toolbarModel="@{model}" />

        <ImageView
            imageUrl="@{model.statusImgData}"
            android:layout_width="124dp"
            android:layout_height="121dp"
            android:layout_marginTop="80dp"
            tools:src="@mipmap/icon_transfer_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@{model.statusTitleData}"
            android:textColor="@color/clr_main_15"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="转账成功" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@{model.statusSubTitleData}"
            android:textColor="@color/clr_main_14"
            android:textSize="12sp"
            tools:text="您已从中心钱包转入沙巴体育9999.000元" />

        <TextView
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/shape_gradient_main_c88"
            android:gravity="center"
            android:onClick="@{() -> model.onBack()}"
            android:text="@{model.buttonTextData}"
            android:textColor="@color/clr_white"
            android:textSize="16sp" />
    </LinearLayout>
</layout>