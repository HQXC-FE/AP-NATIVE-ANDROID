<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.xtree.mine.ui.viewmodel.TransferResultViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/layout_base_toolbar"
            toolbarModel="@{model}" />

        <ImageView
            android:layout_width="124dp"
            android:layout_height="121dp"
            imageUrl="@{model.statusImgData}"
            tools:src="@mipmap/icon_transfer_success"
            android:layout_marginTop="80dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="转账成功"
            android:text="@{model.statusTitleData}"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/clr_txt_title"
            android:layout_marginTop="48dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="您已从中心钱包转入沙巴体育9999.000元"
            android:text="@{model.statusSubTitleData}"
            android:textSize="12sp"
            android:textColor="@color/clr_txt_mouse"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:layout_width="128dp"
            android:layout_height="42dp"
            android:text="@{model.buttonTextData}"
            android:textSize="16sp"
            android:textColor="@color/clr_white"
            android:background="@drawable/shape_gradient_main_c88"
            android:gravity="center"
            android:layout_marginTop="48dp"
            android:onClick="@{() -> model.onBack()}"
            />
    </LinearLayout>
</layout>