<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.xtree.mine.ui.rebateagrt.model.DividendAgrtSendHeadModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/clr_main_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:translationZ="1dp"
        app:cardCornerRadius="12dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0">

                <View
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:background="@color/clr_txt_rebateagrt_mark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_dividend_send_tip"
                    android:textSize="14sp"
                    android:textColor="@color/clr_txt_rebateagrt_mark"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <!--            实发-->
            <TextView
                android:id="@+id/item_payoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_rebateagrt_paid"
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_payoff_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.payoff}"
                android:textSize="10sp"
                android:textColor="@color/clr_txt_black_cm"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_payoff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <!--            欠发-->
            <TextView
                android:id="@+id/item_owe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_rebateagrt_owed"
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

            <TextView
                android:id="@+id/item_owe_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.owe}"
                android:textSize="10sp"
                android:textColor="@color/clr_txt_black_cm"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_owe"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>