<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_12"
        android:paddingBottom="@dimen/layout_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvw_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:text="日期："
            android:textColor="@color/clr_txt_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvw_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-07-11 13:30:25"
            android:textColor="@color/clr_txt_02"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvw_date_title"
            app:layout_constraintStart_toEndOf="@id/tvw_date_title"
            app:layout_constraintTop_toTopOf="@id/tvw_date_title" />

        <TextView
            android:id="@+id/tvw_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/clr_txt_01"
            android:text="代理名："
            app:layout_constraintStart_toStartOf="@id/tvw_date_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_date_title" />

        <TextView
            android:id="@+id/tvw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ydcd008"
            android:textColor="@color/clr_red_01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvw_name_title"
            app:layout_constraintStart_toEndOf="@id/tvw_name_title"
            app:layout_constraintTop_toTopOf="@id/tvw_name_title" />

        <TextView
            android:id="@+id/tvw_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/clr_txt_01"
            android:text="彩蛋次数："
            app:layout_constraintStart_toStartOf="@id/tvw_name_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_name_title" />

        <TextView
            android:id="@+id/tvw_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/clr_txt_02"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvw_time_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_time_title" />

        <TextView
            android:id="@+id/tvw_return_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/clr_txt_01"
            android:text="返比金额："
            app:layout_constraintStart_toStartOf="@id/tvw_time_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_time_title" />

        <TextView
            android:id="@+id/tvw_return_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.5670"
            android:textColor="@color/clr_txt_02"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tvw_return_money_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_return_money_title" />

        <TextView
            android:id="@+id/tvw_touch_member_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/clr_txt_01"
            android:text="触发会员："
            app:layout_constraintStart_toStartOf="@id/tvw_return_money_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_return_money_title" />

        <TextView
            android:id="@+id/tvw_touch_member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="left"
            android:maxLength="21"
            android:singleLine="true"
            android:text="hycd0086"
            android:textColor="@color/clr_txt_02"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvw_touch_member_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_touch_member_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>