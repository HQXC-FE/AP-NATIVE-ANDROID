<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.xtree.mine.ui.rebateagrt.model.GameRebateAgrtHeadModel" />

        <import type="android.view.View" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:translationZ="3dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_gradient_247bf4_8bc1ff_corner_12">

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨日分红（元）"
                android:textSize="12sp"
                android:textColor="@color/color_FFFFFF"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                />

            <TextView
                android:id="@+id/head_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,888.88"
                android:textSize="32sp"
                android:textColor="@color/color_FFFFFF"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/head_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                />

            <TextView
                android:id="@+id/head_tip"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:text="规则1： 综合体育平台亏损分红。活跃代理人数>= XX人..."
                android:textSize="12sp"
                android:textColor="@color/color_FFFFFF"
                android:gravity="center"
                android:background="@color/color_50000000"
                app:layout_constraintTop_toBottomOf="@id/head_rebate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.xtree.base.widget.FilterView
            android:id="@+id/fv_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:statusName="@string/txt_status"
            app:statusVisibility="0"
            app:type1Visibility="8"
            app:type2Visibility="8"
            statuData="@{m.listStatus}"
            queryListener="@{m.filterViewOnClickListerner}" />

    </LinearLayout>

</layout>