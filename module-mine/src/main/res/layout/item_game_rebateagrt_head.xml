<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.xtree.mine.ui.rebateagrt.model.GameRebateAgrtHeadModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/clr_bg_main"
        android:elevation="1dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_gradient_main_c12">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:onClick="@{() -> m.showTip()}"
                android:text="@string/txt_kind_tips"
                android:textColor="@color/clr_white"
                android:textSize="12sp"
                android:visibility="@{m.tipVisible?View.VISIBLE:View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@{m.yesterdayRebateTitle}"
                android:textColor="@color/clr_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:text="@string/txt_dividend_yestday_rmb" />

            <TextView
                android:id="@+id/head_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@{m.yesterdayRebate}"
                android:textColor="@color/clr_white"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/head_title"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/head_tip"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@drawable/bg_bottom_semitransparent_r12"
                android:gravity="left|center_vertical"
                android:onClick="@{() -> m.showRules()}"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="@{m.ratioTip}"
                android:textColor="@color/clr_white"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/head_rebate"
                app:layout_constraintVertical_bias="1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="12dp"
                android:paddingTop="20dp"
                android:paddingEnd="12dp">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.222" />

                <TextView
                    android:id="@+id/filter1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="bottom|start"
                    android:text="起始日期"
                    android:textColor="@color/clr_txt_03"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:drawableBottom="@drawable/divider_horizontal"
                    android:gravity="bottom|start"
                    android:onClick="@{() -> m.selectStartDate()}"
                    android:text="@{m.startDate}"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/guide1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/filter2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="bottom|start"
                    android:text="截止日期"
                    android:textColor="@color/clr_txt_03"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filter1"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:drawableBottom="@drawable/divider_horizontal"
                    android:gravity="bottom|start"
                    android:onClick="@{() -> m.selectEndDate()}"
                    android:text="@{m.endDate}"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/guide1"
                    app:layout_constraintTop_toTopOf="@id/filter2"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/filter3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="bottom|start"
                    android:text="状态"
                    android:textColor="@color/clr_txt_03"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/guide1"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filter2"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:drawableEnd="@mipmap/bt_icon_expand"
                    android:drawableBottom="@drawable/divider_horizontal"
                    android:gravity="bottom|start"
                    android:hint="请输入要查询的用户名"
                    android:onClick="@{() -> m.selectStatus()}"
                    android:text="@{m.state.title}"
                    android:textColor="@color/clr_txt_black_cm"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toStartOf="@id/guide1"
                    app:layout_constraintTop_toTopOf="@id/filter3"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/shape_gradient_main_c10"
                    android:gravity="center"
                    android:onClick="@{() -> m.check()}"
                    android:text="查询"
                    android:textColor="@color/clr_white"
                    android:textSize="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/filter3"
                    app:layout_constraintVertical_bias="1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>