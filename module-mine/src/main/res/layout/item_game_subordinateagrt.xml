<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:translationZ="1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="0">

                <View
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:background="@color/color_247BF4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户001"
                    android:textSize="14sp"
                    android:textColor="@color/color_1E1E1E"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看"
                android:textColor="@color/color_5B5B6A"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/guide1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="1"
                />


<!--            签订日期-->
            <TextView
                android:id="@+id/item_signdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签订日期"
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toTopOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_signdate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-03-09"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_signdate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <!--            工资比例-->
            <TextView
                android:id="@+id/item_proportions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工资比例"
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_signdate_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_proportions_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.500%"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_proportions"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_createdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建时间"
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_proportions_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_createdate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-03-09"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_createdate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <!--            生效日期-->
            <TextView
                android:id="@+id/item_cmtdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生效日期"
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toTopOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

            <TextView
                android:id="@+id/item_cmtdate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-03-09"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_cmtdate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

<!--            状态-->
            <TextView
                android:id="@+id/item_statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                app:layout_constraintTop_toTopOf="@id/item_createdate"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

            <TextView
                android:id="@+id/item_statu_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已签订"
                android:textSize="14sp"
                android:textColor="@color/color_37AA4A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_statu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>