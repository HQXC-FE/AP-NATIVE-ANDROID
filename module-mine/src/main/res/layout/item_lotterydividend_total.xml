<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.xtree.mine.ui.rebateagrt.model.LotteryDividendReportsTotalModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        app:cardElevation="1dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/item_lotterydividend_total_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计："
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/item_lotterydividend_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盈亏："
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/item_lotterydividend_total_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.profitloss}"
                android:textSize="10sp"
                android:textColor="@color/clr_txt_02"
                app:layout_constraintTop_toTopOf="@id/item_lotterydividend_profit"
                app:layout_constraintStart_toEndOf="@id/item_lotterydividend_profit"
                app:layout_constraintEnd_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="@id/item_lotterydividend_profit"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/item_lotterydividend_selfdividend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本人分红："
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/item_lotterydividend_profit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.netloss}"
                android:textSize="10sp"
                android:textColor="@color/clr_txt_02"
                app:layout_constraintTop_toTopOf="@id/item_lotterydividend_selfdividend"
                app:layout_constraintStart_toEndOf="@id/item_lotterydividend_selfdividend"
                app:layout_constraintEnd_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="@id/item_lotterydividend_selfdividend"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/item_lotterydividend_netprofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净盈亏："
                android:textSize="12sp"
                android:textColor="@color/clr_txt_02"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/item_lotterydividend_total_title"
                app:layout_constraintStart_toStartOf="@id/guide1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.self_money}"
                android:textSize="10sp"
                android:textColor="@color/clr_txt_02"
                app:layout_constraintTop_toTopOf="@id/item_lotterydividend_netprofit"
                app:layout_constraintStart_toEndOf="@id/item_lotterydividend_netprofit"
                app:layout_constraintEnd_toEndOf="@id/guide1"
                app:layout_constraintBottom_toBottomOf="@id/item_lotterydividend_netprofit"
                app:layout_constraintVertical_bias="0.5"
                app:layout_constraintHorizontal_bias="0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>