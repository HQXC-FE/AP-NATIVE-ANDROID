<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/mainListAcBackgroupColor"
    android:orientation="horizontal">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        style="?attr/msg_info_bg_attr">
        <CheckBox
            android:id="@+id/ckb_msg_check"
            style="?attr/msg_info_check_box_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_msg_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            style="?attr/message_ic_round_attr"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ckb_msg_check"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvw_msg_title"
            style="@style/style_bind_confirm_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:ellipsize="end"
            android:maxEms="10"
            android:singleLine="true"
            android:text="13测试"
            app:layout_constraintStart_toEndOf="@id/ivw_msg_icon"
            app:layout_constraintTop_toTopOf="@id/ivw_msg_icon" />

        <TextView
            android:id="@+id/tvw_msg_date"
            style="@style/style_bind_confirm_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="2023-10-13 16:08:33"
            android:textStyle="normal"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/bt_text_12sp"
            app:layout_constraintBottom_toBottomOf="@id/ivw_msg_icon"
            app:layout_constraintStart_toEndOf="@id/ivw_msg_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/me_wallet_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:src="@mipmap/me_wallet_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/clr_grey_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>