<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="m"
            type="com.xtree.mine.ui.rebateagrt.model.RecommendedReportsModel" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:translationZ="1dp"
        app:cardCornerRadius="12dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:id="@+id/item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0">

                <View
                    android:layout_width="3dp"
                    android:layout_height="14dp"
                    android:background="@color/color_247BF4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{m.userName}"
                    android:textSize="14sp"
                    android:textColor="@color/color_1E1E1E"
                    android:layout_marginStart="2dp"
                    />
            </LinearLayout>

            <!--            周期投注额-->
            <TextView
                android:id="@+id/item_bet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效投注："
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_username"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_bet_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.bet}"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/item_bet"
                app:layout_constraintBottom_toBottomOf="@id/item_bet"
                app:layout_constraintStart_toEndOf="@id/item_bet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5"
                />

            <!--            盈亏-->
            <TextView
                android:id="@+id/item_cashflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="团队盈亏："
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_bet_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_cashflow_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.profitloss}"
                android:textSize="10sp"
                android:textColor="@color/color_FD5255"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/item_cashflow"
                app:layout_constraintBottom_toBottomOf="@id/item_cashflow"
                app:layout_constraintStart_toEndOf="@id/item_cashflow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5"
                />

            <!--            周期-->
            <TextView
                android:id="@+id/item_cyclicality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周期："
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_cashflow_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                />

            <TextView
                android:id="@+id/item_createdate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.cycle}"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/item_cyclicality"
                app:layout_constraintBottom_toBottomOf="@id/item_cyclicality"
                app:layout_constraintStart_toEndOf="@id/item_cyclicality"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5"
                />

            <!--            活跃人数-->
            <TextView
                android:id="@+id/item_persons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活跃人数："
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_username"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

            <TextView
                android:id="@+id/item_persons_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.people}"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/item_persons"
                app:layout_constraintBottom_toBottomOf="@id/item_persons"
                app:layout_constraintStart_toEndOf="@id/item_persons"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5"
                />

            <TextView
                android:id="@+id/item_recrewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐奖励："
                android:textSize="12sp"
                android:textColor="@color/color_5B5B6A"
                android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@id/item_persons_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="1"
                />

            <TextView
                android:id="@+id/item_recrewards_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.label}"
                android:textSize="10sp"
                android:textColor="@color/color_1E1E1E"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/item_recrewards"
                app:layout_constraintBottom_toBottomOf="@id/item_recrewards"
                app:layout_constraintStart_toEndOf="@id/item_recrewards"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintVertical_bias="0.5"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>