<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_margin"
    android:background="@drawable/bg_white_6"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin">

    <LinearLayout style="@style/style_item_ll_row">

        <TextView
            android:id="@+id/tvw_username"
            android:drawableStart="@mipmap/ic_account_change"
            android:drawablePadding="3dp"
            style="@style/style_item_report_value"
            tools:text="Lorraine001" />

        <TextView
            android:id="@+id/tvw_cntitle"
            style="@style/style_item_report_title_end"
            android:textColor="@color/clr_blue_05a"
            tools:text="BBIN转入" />
    </LinearLayout>

    <View style="@style/style_filter_info_dividing" />

    <LinearLayout style="@style/style_item_ll_row">

        <TextView
            android:id="@+id/tvw_in_out"
            style="@style/style_item_report_title"
            android:text="@string/txt_income" />

        <TextView
            style="@style/style_item_report_title_center"
            android:text="@string/txt_balance" />

        <TextView
            android:id="@+id/tvw_status_title"
            style="@style/style_item_report_title_end"
            android:text="@string/txt_status" />
    </LinearLayout>

    <LinearLayout style="@style/style_item_ll_row">

        <TextView
            android:id="@+id/tvw_amount"
            style="@style/style_item_report_value"
            android:textColor="@color/clr_text_red_green_selector"
            tools:text="5.00" />

        <TextView
            android:id="@+id/tvw_balance"
            style="@style/style_item_report_value_center"
            tools:text="5.00" />

        <TextView
            android:id="@+id/tvw_status"
            style="@style/style_item_report_value_end"
            android:textColor="@color/clr_text_red_green_selector"
            tools:text="成功" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvw_times"
        style="@style/style_item_report_title_center"
        tools:text="2023-2-21 13:22" />

    <LinearLayout style="@style/style_item_ll_row">

        <TextView
            style="@style/style_item_report_title"
            android:layout_weight="0"
            android:text="@string/txt_acc_change_order_s" />

        <TextView
            android:id="@+id/tvw_orderno"
            style="@style/style_item_report_title"
            tools:text="20232211322557812333" />
    </LinearLayout>

    <LinearLayout style="@style/style_item_ll_row">

        <TextView
            style="@style/style_item_report_title"
            android:layout_weight="0"
            android:text="@string/txt_note_s" />

        <TextView
            android:id="@+id/tvw_notes"
            style="@style/style_item_report_title"
            android:text="----" />
    </LinearLayout>

</LinearLayout>