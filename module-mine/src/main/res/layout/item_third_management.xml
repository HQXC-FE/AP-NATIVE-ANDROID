<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/layout_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_12"
        android:paddingBottom="@dimen/layout_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvw_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:drawableStart="@mipmap/ic_calendar"
            android:drawablePadding="3dp"
            android:text="日期："
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvw_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-07-11 13:30:25"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/tvw_date_title"
            app:layout_constraintStart_toEndOf="@id/tvw_date_title"
            app:layout_constraintTop_toTopOf="@id/tvw_date_title" />

        <TextView
            android:id="@+id/tvw_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="中奖用户："
            app:layout_constraintStart_toStartOf="@id/tvw_date_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_date_title" />

        <TextView
            android:id="@+id/tvw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ydcd008"
            android:textColor="@color/clr_red_01"
            app:layout_constraintBottom_toBottomOf="@id/tvw_name_title"
            app:layout_constraintStart_toEndOf="@id/tvw_name_title"
            app:layout_constraintTop_toTopOf="@id/tvw_name_title" />

        <TextView
            android:id="@+id/tvw_platform_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:text="游戏平台："
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvw_name"
            app:layout_constraintTop_toTopOf="@id/tvw_name_title" />

        <TextView
            android:id="@+id/tvw_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PP娱乐"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/tvw_platform_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_platform_title" />

        <TextView
            android:id="@+id/tvw_bonus_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="中奖金额："
            app:layout_constraintStart_toStartOf="@id/tvw_name_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_name_title" />

        <TextView
            android:id="@+id/tvw_bonus_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2359.2"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@id/tvw_bonus_money_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_bonus_money_title" />

        <TextView
            android:id="@+id/tvw_return_money_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="返佣(管理费)："
            app:layout_constraintStart_toStartOf="@id/tvw_bonus_money_title"
            app:layout_constraintTop_toBottomOf="@id/tvw_bonus_money_title" />

        <TextView
            android:id="@+id/tvw_return_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="left"
            android:maxLength="21"
            android:singleLine="true"
            android:text="2.3592"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvw_return_money_title"
            app:layout_constraintTop_toTopOf="@+id/tvw_return_money_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>