<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_check_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/forget_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_forget_background"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/forget_password_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/forget_header" />

    <ImageView
        android:id="@+id/ivw_reset_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@mipmap/me_reset_password_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ll_forget_background" />

    <ImageView
        android:id="@+id/ivw_reset_password_step_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/me_reset_password_step_first"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivw_reset_password_title" />

    <TextView
        android:id="@+id/twv_reset_password_title"
        style="@style/style_trans_dividing_line"
        android:layout_marginTop="20dp"
        android:text="@string/txt_user_name"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivw_reset_password_step_third" />

    <EditText
        android:id="@+id/edt_reset_password_username"
        style="@style/style_cm_edt"
        android:layout_width="280dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/cm_bg_input_wht"
        android:hint="@string/txt_user_name_input"
        app:layout_constraintEnd_toEndOf="@id/tvw_reset_password_next"
        app:layout_constraintStart_toStartOf="@id/tvw_reset_password_next"
        app:layout_constraintTop_toBottomOf="@id/twv_reset_password_title"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/twv_reset_password_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@mipmap/cm_ic_hint_red"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:text="@string/txt_user_name_input"
        android:textColor="@color/clr_orange_03"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/edt_reset_password_username"
        app:layout_constraintTop_toBottomOf="@id/edt_reset_password_username" />

    <TextView
        android:id="@+id/tvw_reset_password_next"
        style="@style/style_cm_btn_round"
        android:layout_marginStart="64dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="64dp"
        android:text="@string/txt_next_step"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_reset_password_username" />

</androidx.constraintlayout.widget.ConstraintLayout>