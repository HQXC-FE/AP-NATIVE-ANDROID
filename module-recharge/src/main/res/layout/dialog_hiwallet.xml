<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_tip_dialog"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivw_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@mipmap/ic_pop_close" />

    <TextView
        android:id="@+id/tvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/txt_kind_tips"
        style="?attr/channelTextSelectAttr"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvw_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_rc_hi_wlt_content"
        android:textSize="15sp"
        style="?attr/textPrimaryAttr"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvw_ok"
        style="?attr/btn_short_attr"
        android:text="@string/txt_confirm" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rc_split_line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/tvw_reg"
            style="?attr/rc_reg_hi_wallet_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_rc_hi_reg" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvw_download"
            style="?attr/rc_down_hi_wallet_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_rc_hi_down" />
    </LinearLayout>

    <TextView
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:contentDescription="for show reg and download."
        android:visibility="visible" />
</LinearLayout>