<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    style="@style/style_rc_dlg_root"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivw_bg_top"
        style="@style/style_rc_dlg_bg_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivw_bg_bottom"
        style="@style/style_rc_dlg_bg_top2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivw_bg_top" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivw_top"
            style="@style/style_rc_dlg_bg_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvw_title"
            style="@style/style_rc_dlg_title"
            android:text="银行卡充值"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_close"
            style="@style/style_rc_dlg_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivw_cs"
            style="@style/style_rc_dlg_cs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ivw_close"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvw_title_amount"
                        style="@style/style_rc_title"
                        android:text="存款金额"
                        app:layout_constraintBottom_toBottomOf="@id/tvw_amount_hint"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvw_amount_hint" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvw_amount_hint"
                        style="@style/style_cm_edit"
                        android:layout_width="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:elevation="1dp"
                        android:text="@string/txt_enter_recharge_amount"
                        android:textColor="@color/clr_txt_color_hint"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvw_title_amount"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:enabled="true" />

                    <EditText
                        android:id="@+id/edt_amount"
                        style="@style/style_cm_edit"
                        android:layout_width="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="9"
                        android:text=""
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvw_title_amount"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:enabled="false"
                        tools:visibility="gone" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tvw_tip_amount"
                    style="@style/style_cm_tip_small_orange"
                    android:layout_marginTop="6dp"
                    android:drawableStart="@mipmap/cm_ic_hint_red"
                    android:drawablePadding="2dp"
                    android:text="@string/txt_enter_correct_amount"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.xtree.base.widget.MaxRecyclerView
                    android:id="@+id/rcv_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp" />

                <LinearLayout
                    android:id="@+id/ll_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvw_fx_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_weight="1"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="@string/txt_ref_exchange_rate"
                        android:textColor="@color/clr_txt_black_01"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvw_pre_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/clr_txt_black_01"
                        android:textSize="11sp"
                        tools:text="预计支付" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:gravity="center_vertical"
                        android:text="@string/txt_real_recharge_amount"
                        android:textColor="@color/clr_txt_black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvw_real_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/clr_txt_black_01"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/txt_yuan"
                        android:textColor="@color/clr_txt_black_01"
                        android:textSize="11sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_tip_channel"
                    style="@style/style_rc_tip_small_grey"
                    android:text="@string/txt_rc_no_alipay_wechat"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <LinearLayout
                    android:id="@+id/ll_manual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        style="@style/style_rc_tip_small_grey"
                        android:text="@string/txt_rc_manual_tip_1" />

                    <TextView
                        style="@style/style_cm_tip_small_yellow"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_rc_m_5" />
                </LinearLayout>

                <!--<ImageView
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@mipmap/cm_btn_next" />-->
                <TextView
                    android:id="@+id/btn_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_btn_long_selector"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/txt_next"
                    android:textColor="@color/clr_white"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvw_tip_same_amount"
                    style="@style/style_rc_tip_small_grey"
                    android:layout_marginTop="24dp"
                    android:drawableStart="@mipmap/cm_ic_hint_purple"
                    android:drawablePadding="2dp"
                    android:text="@string/txt_amount_filled_should_same_as_remittance_amount" />

                <LinearLayout
                    android:id="@+id/ll_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableStart="@mipmap/cm_ic_hint_purple"
                            android:drawablePadding="4dp"
                            android:text="@string/txt_rc_step"
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvw_step_tutorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@mipmap/cm_ic_tutorial"
                            android:drawablePadding="4dp"
                            android:text="@string/txt_rc_cnyt_tutorial"
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvw_step_content"
                        style="@style/style_rc_tip_small_grey"
                        android:layout_marginStart="0dp"
                        tools:text="DEMO" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvw_tip_bottom"
                    style="@style/style_rc_tip_small_grey"
                    android:layout_marginBottom="36dp"
                    tools:text="@string/txt_kind_tips" />

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>