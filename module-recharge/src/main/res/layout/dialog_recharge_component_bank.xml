<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/clr_transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivw_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/re_bank_down_left_arrow" />

    <TextView
        android:id="@+id/tvw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="@string/txt_recharge_bank"
        android:textColor="@color/clr_black"
        android:textSize="14sp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginLeft="-60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tvw_jump"

            style="@style/style_btn_short_jump"
            android:text="@string/txt_recharge_view_jump" />
        <TextView
            android:id="@+id/tvw_next"
            style="@style/style_btn_short_next"
            android:text="@string/txt_recharge_view_next" />
    </LinearLayout>

</LinearLayout>