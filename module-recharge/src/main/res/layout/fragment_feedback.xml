<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xtree.recharge.ui.viewmodel.RechargeViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.FeedbackFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                style="@style/style_cm_title"
                android:text="@string/txt_feedback"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivw_cs"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_cs" />

                <ImageView
                    android:id="@+id/ivw_msg"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_msg" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/style_cm_tip_small_orange"
            android:text="@string/txt_note_asterisks_cannot_empty" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--未到账订单选择-->
                <LinearLayout
                    android:id="@+id/ll_unreceived_orders"
                    style="@style/style_ll_row">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_unreceived_orders"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_select_un_order" />

                        <TextView
                            android:id="@+id/tvw_unreceived_orders"
                            style="@style/style_feedback_edit"
                            android:layout_toRightOf="@id/tv_unreceived_orders"
                            android:drawableEnd="@mipmap/bt_icon_expand"
                            android:hint="@string/txt_tip_select_un_order_right"
                            android:singleLine="true"
                            android:text="" />
                        <ImageView
                            android:id="@+id/iv_unreceived_orders"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tvw_unreceived_orders"
                            android:layout_alignLeft="@id/tvw_unreceived_orders"
                            android:background="@mipmap/cm_ic_hint_purple"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/tvw_unreceived_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_select_pay_bottom"
                            android:layout_alignTop="@id/iv_unreceived_orders"
                            android:layout_toRightOf="@id/iv_unreceived_orders"
                            android:visibility="invisible"
                            />


                    </RelativeLayout>


                </LinearLayout>
                <!--付款方式-->
                <LinearLayout style="@style/style_ll_row"
                    android:id="@+id/ll_payment_method">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:id="@+id/tv_payment_method"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_select_pay" />

                        <TextView
                            android:id="@+id/tvw_payment_method"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_payment_method"
                            android:drawableEnd="@mipmap/bt_icon_expand"
                            android:hint="银行卡/微信/支付宝"
                            android:text="" />
                        <ImageView
                            android:id="@+id/iv_payment_method"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tvw_payment_method"
                            android:layout_alignLeft="@id/tvw_payment_method"
                            android:background="@mipmap/cm_ic_hint_purple"
                            />
                        <TextView
                            android:id="@+id/tv_payment_method_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_select_pay_bottom"
                            android:layout_alignTop="@id/iv_payment_method"
                            android:layout_toRightOf="@id/iv_payment_method"
                            />

                    </RelativeLayout>


                </LinearLayout>
                <!--用户名-->
                <LinearLayout style="@style/style_ll_row">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_left_username"
                            style="@style/style_fb_info_title"
                            android:text="* 用户名："
                            />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_left_username"
                            android:hint="" />
                    </RelativeLayout>

                </LinearLayout>
                <!--付款账户 -->
                <LinearLayout
                    android:id="@+id/ll_payment_account"
                    style="@style/style_ll_row"
                    android:visibility="visible"
                    tools:visibility="visible">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_payment_account"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_payment_account" />

                        <EditText
                            android:id="@+id/et_payment_account"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_payment_account"
                            android:hint="@string/txt_tip_input_wechat_bank_name" />

                        <ImageView
                            android:id="@+id/iv_payment_account"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/et_payment_account"
                            android:layout_alignLeft="@id/et_payment_account"
                            android:background="@mipmap/cm_ic_hint_purple"

                            />
                        <TextView
                            android:id="@+id/tv_payment_account_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_wechat_pay"
                            android:layout_alignTop="@id/iv_payment_account"
                            android:layout_toRightOf="@id/iv_payment_account"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <!--付款钱包地址-->
                <LinearLayout
                    android:id="@+id/ll_payment_wallet_address"
                    style="@style/style_ll_row"
                    android:visibility="gone"
                    tools:visibility="visible"
                   >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_payment_address"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_usdt_payment_account" />

                        <EditText
                            android:id="@+id/et_payment_address"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_payment_address"
                            android:hint="@string/txt_tip_input_usdt_selector_payment_account" />

                        <ImageView
                            android:id="@+id/iv_payment_address"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/et_payment_address"
                            android:layout_alignLeft="@id/et_payment_address"
                            android:background="@mipmap/cm_ic_hint_purple"

                            />
                        <TextView
                            android:id="@+id/tv_payment_address_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_usdt_pay_err"
                            android:layout_alignTop="@id/iv_payment_address"
                            android:layout_toRightOf="@id/iv_payment_address"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <!--付款人姓名-->
                <LinearLayout
                    android:id="@+id/ll_payment_name"
                    style="@style/style_ll_row"
                    android:visibility="visible"
                    tools:visibility="visible">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_payment_name"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_payment_name" />

                        <LinearLayout
                            android:id="@+id/ll_payment_name_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_payment_name">

                            <EditText
                                android:id="@+id/et_payment_name"
                                style="@style/style_cm_edit"
                                android:hint="@string/txt_tip_input_wechat_pay_name"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_payment_name_info"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/ll_payment_name_info"
                            android:layout_alignLeft="@id/ll_payment_name_info"
                            android:background="@mipmap/cm_ic_hint_purple"
                            />
                        <TextView
                            android:id="@+id/tv_payment_name_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_pay_wechat_name"
                            android:layout_alignTop="@id/iv_payment_name_info"
                            android:layout_toRightOf="@id/iv_payment_name_info"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <!--收款人姓名-->
               <LinearLayout
                    android:id="@+id/ll_collection_name"
                    style="@style/style_ll_row"
                    android:visibility="visible"
                    tools:visibility="visible">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_collection_name"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_collection_name" />

                        <LinearLayout
                            android:id="@+id/ll_collection_name_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_collection_name">

                            <EditText
                                android:id="@+id/et_collection_name"
                                style="@style/style_cm_edit"
                                android:hint="@string/txt_tip_input_wechat_payee_name"
                                />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_collection_name"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/ll_collection_name_info"
                            android:layout_alignLeft="@id/ll_collection_name_info"
                            android:background="@mipmap/cm_ic_hint_purple"
                            />
                        <TextView
                            android:id="@+id/tvt_collection_name"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_collection_wechat_name"
                            android:layout_alignTop="@id/iv_collection_name"
                            android:layout_toRightOf="@id/iv_collection_name"
                            />
                    </RelativeLayout>

                </LinearLayout>
                <!--协议-->
                <LinearLayout
                    android:id="@+id/ll_payment_wallet_protocol"
                    style="@style/style_ll_row"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_protocol"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_usdt_payment_name" />
                        <LinearLayout
                            android:id="@+id/ll_protocol_info"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_protocol"
                            >

                            <EditText
                                android:id="@+id/ed_protocol"
                                style="@style/style_cm_edit"
                                android:visibility="visible"
                                android:hint="@string/txt_tip_input_usdt_payment_agreement" />
                            <!--选择付款协议-->
                            <TextView
                                android:id="@+id/tvw_protocol"
                                style="@style/style_cm_edit"
                                android:visibility="gone"
                                android:drawableEnd="@mipmap/bt_icon_expand"
                                android:hint="@string/txt_tip_input_usdt_payment_agreement"
                                android:text="" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_selector_tip_collection_name"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_below="@id/ll_protocol_info"
                            android:layout_alignLeft="@id/ll_protocol_info"
                            android:layout_marginTop="10dp"
                            android:background="@mipmap/cm_ic_hint_purple" />
                        <TextView
                            android:id="@+id/tv_selector_tip_collection_name"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_usdt_payment_agreement"
                            android:layout_alignTop="@id/iv_selector_tip_collection_name"
                            android:layout_toRightOf="@id/iv_selector_tip_collection_name"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--存款金额-->
                <LinearLayout
                    android:id="@+id/ll_deposit_amount"
                    style="@style/style_ll_row"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_deposit_amount"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_payment_numb" />
                        <EditText
                            android:id="@+id/et_deposit_amount"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_deposit_amount"
                            android:hint="@string/txt_tip_input_wechat_save_numb" />
                        <ImageView
                            android:id="@+id/iv_deposit_amount"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/et_deposit_amount"
                            android:layout_alignLeft="@id/et_deposit_amount"
                            android:background="@mipmap/cm_ic_hint_purple"
                            />
                        <TextView
                            android:id="@+id/tv_deposit_amount_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_wechat_save_number"
                            android:layout_alignTop="@id/iv_deposit_amount"
                            android:layout_toRightOf="@id/iv_deposit_amount"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--虚拟币数量-->
                <LinearLayout
                    android:id="@+id/ll_virtual_amount"
                    style="@style/style_ll_row"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_virtual_amount"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_usdt_numb" />
                        <EditText
                            android:id="@+id/et_virtual_amount"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_virtual_amount"
                            android:hint="@string/txt_tip_input_wechat_save_numb" />
                        <ImageView
                            android:id="@+id/iv_virtual_amount"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/et_virtual_amount"
                            android:layout_alignLeft="@id/et_virtual_amount"
                            android:background="@mipmap/cm_ic_hint_purple"
                            />
                        <TextView
                            android:id="@+id/tv_virtual_amount_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_wechat_save_number"
                            android:layout_alignTop="@id/iv_virtual_amount"
                            android:layout_toRightOf="@id/iv_virtual_amount"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--存款精确时间-->
                <LinearLayout
                    android:id="@+id/ll_deposit_time"
                    style="@style/style_ll_row">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_deposit_time_info_left"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_payment_time" />

                        <TextView
                            android:id="@+id/tv_deposit_time"

                            android:layout_toRightOf="@id/tv_deposit_time_info_left"
                            android:drawableEnd="@mipmap/bt_icon_expand"
                            style="@style/style_cm_edit"
                            android:hint="请输入存款时间"
                            android:text="" />
                        <ImageView
                            android:id="@+id/iv_deposit_time"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tv_deposit_time"
                            android:layout_alignLeft="@id/tv_deposit_time"
                            android:background="@mipmap/cm_ic_hint_purple"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/tv_deposit_time_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_usdt_save_number_time_err"
                            android:layout_alignTop="@id/iv_deposit_time"
                            android:layout_toRightOf="@id/iv_deposit_time"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--第三方订单号-->
                <LinearLayout style="@style/style_ll_row">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_third_order_number"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_three_numb" />

                        <EditText
                            android:id="@+id/ed_third_order_number"
                            style="@style/style_cm_edit"
                            android:layout_toRightOf="@id/tv_third_order_number"
                            android:hint="@string/txt_tip_input_three_numb" />

                        <ImageView
                            android:id="@+id/iv_third_order_number"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/ed_third_order_number"
                            android:layout_alignLeft="@id/ed_third_order_number"
                            android:background="@mipmap/cm_ic_hint_purple"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/tv_third_order_number_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_wechat_three_numb_err"
                            android:layout_alignTop="@id/iv_third_order_number"
                            android:layout_toRightOf="@id/iv_third_order_number"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--支付渠道-->
                <LinearLayout style="@style/style_ll_row">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_payment_channel"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_wechat_pay_way" />

                        <TextView
                            android:id="@+id/tvw_payment_channel"
                            android:layout_toRightOf="@id/tv_payment_channel"
                            android:drawableEnd="@mipmap/bt_icon_expand"
                            style="@style/style_cm_edit"
                            android:hint="@string/txt_tip_input_wechat_select_pay_way"
                            android:text=""
                            />

                        <ImageView
                            android:id="@+id/iv_payment_channel"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/tvw_payment_channel"
                            android:layout_alignLeft="@id/tvw_payment_channel"
                            android:background="@mipmap/cm_ic_hint_purple"
                            android:visibility="invisible"
                            />
                        <TextView
                            android:id="@+id/tv_payment_channel_info"
                            style="@style/style_fb_tip_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_tip_input_wechat_select_pay_way"
                            android:layout_alignTop="@id/iv_payment_channel"
                            android:layout_toRightOf="@id/iv_payment_channel"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>
                </LinearLayout>
                <!--收款钱包地址-->
                <LinearLayout
                    android:id="@+id/ll_collection_wallet_address"
                    style="@style/style_ll_row"
                    android:visibility="gone"
                    tools:visibility="visible"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_collection_wallet_address"
                            style="@style/style_fb_info_title"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/txt_tip_input_usdt_add" />

                        <EditText
                            android:id="@+id/et_collection_wallet_address"
