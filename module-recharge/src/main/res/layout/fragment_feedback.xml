<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xtree.recharge.ui.viewmodel.RechargeViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.fragment.FeedbackFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                style="@style/style_cm_title"
                android:text="@string/txt_feedback"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivw_cs"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_cs" />

                <ImageView
                    android:id="@+id/ivw_msg"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_msg" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            style="@style/style_cm_tip_small_orange"
            android:text="@string/txt_note_asterisks_cannot_empty" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 选择付款方式：" />

                    <TextView
                        android:id="@+id/tvw_type"
                        style="@style/style_cm_edit"
                        android:drawableEnd="@mipmap/bt_icon_expand"
                        android:hint="银行卡/微信/支付宝"
                        android:text="" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 付款账户：" />

                    <EditText
                        android:id="@+id/edt_acc"
                        style="@style/style_cm_edit"
                        android:hint="请输入付款银行" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 付款人姓名：" />

                    <EditText
                        android:id="@+id/edt_name"
                        style="@style/style_cm_edit"
                        android:hint="请输入付款人姓名" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 收款人姓名：" />

                    <EditText
                        android:id="@+id/edt_receive_name"
                        style="@style/style_cm_edit"
                        android:hint="请输入收款人姓名" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 存款金额：" />

                    <EditText
                        android:id="@+id/edt_amount"
                        style="@style/style_cm_edit"
                        android:hint="请输入存款金额"
                        android:imeOptions="actionDone" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 存款精确时间：" />

                    <EditText
                        android:id="@+id/edt_save_time"
                        style="@style/style_cm_edit"
                        android:hint="2023-5-23 10:48:32" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 第三方订单号：" />

                    <EditText
                        android:id="@+id/edt_ref_num"
                        style="@style/style_cm_edit"
                        android:hint="请输入第三方订单号"
                        android:imeOptions="actionDone" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 支付渠道：" />

                    <TextView
                        android:id="@+id/tvw_channel"
                        style="@style/style_cm_edit"
                        android:drawableEnd="@mipmap/bt_icon_expand"
                        android:hint="请选择支付渠道" />
                </LinearLayout>

                <LinearLayout style="@style/style_ll_row">

                    <TextView
                        style="@style/style_fb_info_title"
                        android:text="* 汇款成功截图：" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivw_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:background="@mipmap/cm_btn_next" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>