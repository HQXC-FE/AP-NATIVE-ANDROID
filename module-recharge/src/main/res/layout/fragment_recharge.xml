<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xtree.recharge.ui.viewmodel.RechargeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <TextView
                style="@style/style_cm_title"
                android:text="充值"
                app:layout_constraintBaseline_toBaselineOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivw_back"
                style="@style/style_ic_title_back"
                android:src="@mipmap/cm_ic_back"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivw_cs"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_cs" />

                <ImageView
                    android:id="@+id/ivw_rule"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_rule" />

                <ImageView
                    android:id="@+id/ivw_msg"
                    style="@style/style_ic_title_right"
                    android:src="@mipmap/cm_ic_msg" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/clr_grey_22" />

        <ImageView
            android:id="@+id/ivw_feedback_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:src="@mipmap/rc_ic_feedback" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ScrollViewCount">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/style_cm_title"
                        android:layout_marginTop="0dp"
                        android:text="请选择充值渠道：" />

                    <ImageView
                        android:id="@+id/ivw_1k"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="4dp"
                        android:src="@mipmap/rc_ic_1k" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/tvw_tutorial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:drawableStart="@mipmap/cm_ic_tutorial"
                        android:paddingTop="4dp"
                        android:text="充值教程"
                        android:textColor="@color/clr_txt_black_01"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.xtree.base.widget.MaxRecyclerView
                    android:id="@+id/rcv_pmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/style_cm_title"
                            android:layout_marginTop="0dp"
                            android:text="当前充值渠道：" />

                        <ImageView
                            android:id="@+id/ivw_cur_pmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="4dp"
                            tools:src="@mipmap/ic_ebkc" />

                        <TextView
                            android:id="@+id/tvw_cur_pmt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp"
                            tools:text="网银快充3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_bind_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <TextView
                            style="@style/style_cm_title"
                            android:layout_marginTop="0dp"
                            android:text="请先绑定个人信息" />

                        <TextView
                            android:id="@+id/tvw_bind_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:gravity="center_vertical"
                            android:text="立刻绑定手机"
                            android:textColor="@color/clr_grey_80"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvw_bind_yhk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:gravity="center_vertical"
                            android:text="立刻绑定银行卡"
                            android:textColor="@color/clr_grey_80"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <!-- 以下是各充值渠道的UI -->
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/style_cm_title"
                            android:text="存款人姓名" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="@dimen/layout_margin"
                            android:background="@mipmap/cm_bg_input">

                            <EditText
                                android:id="@+id/edt_name"
                                android:layout_width="match_parent"
                                android:layout_height="42dp"
                                android:background="@null"
                                android:hint="请输入支付账户真实姓名"
                                android:lines="1"
                                android:maxLength="16"
                                android:padding="8dp"
                                android:text=""
                                android:textColorHint="@color/clr_txt_grey_03"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/ivw_clear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginEnd="4dp"
                                android:padding="8dp"
                                android:src="@mipmap/cm_ic_close"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:layout_marginTop="8dp"
                            android:drawableStart="@mipmap/cm_ic_hint_red"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="*请如实填写支付账户中文姓名!"
                            android:textColor="@color/clr_orange_03"
                            android:textSize="11sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <TextView
                        style="@style/style_cm_title"
                        android:text="存款金额" />

                    <RadioGroup
                        android:id="@+id/rgp_amount"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdo_1"
                            style="@style/style_rdo_blc"
                            tools:text="500" />

                        <RadioButton
                            android:id="@+id/rdo_2"
                            style="@style/style_rdo_blc"
                            tools:text="1000" />

                        <RadioButton
                            android:id="@+id/rdo_3"
                            style="@style/style_rdo_blc"
                            tools:text="1500" />

                        <RadioButton
                            android:id="@+id/rdo_4"
                            style="@style/style_rdo_blc"
                            tools:text="3000" />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/edt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="@dimen/layout_margin"
                        android:background="@mipmap/cm_bg_input_wht"
                        android:hint="请输入充值金额"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="9"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/clr_txt_black_01"
                        android:textColorHint="@color/clr_grey_20"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@mipmap/cm_ic_hint_red"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="*请输入正确的金额!"
                        android:textColor="@color/clr_orange_03"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:id="@+id/ll_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvw_fx_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:layout_weight="1"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:text="参考汇率"
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvw_pre_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:layout_marginEnd="@dimen/layout_margin"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp"
                            tools:text="预计支付" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/layout_margin"
                            android:gravity="center_vertical"
                            android:text="实际充值金额："
                            android:textColor="@color/clr_txt_black"
                            android:textSize="11sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tvw_real_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:textColor="@color/clr_txt_black_01"
                            android:textSize="11sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:background="@mipmap/cm_btn_next" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@mipmap/cm_ic_hint_purple"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="*平台填写金额应当与汇款金额完全一致，否则将无法及时到账！"
                        android:textColor="@color/clr_grey_40"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvw_tip_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_margin"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="36dp"
                        android:drawablePadding="2dp"
                        android:gravity="center_vertical"
                        android:text="温馨提示"
                        android:textColor="@color/clr_grey_40"
                        android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
