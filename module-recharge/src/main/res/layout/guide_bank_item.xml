    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_guide_bank_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@mipmap/re_bank_down_left_arrow" />
        <TextView
            android:id="@+id/tv_guide_bank_arr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_guide_bank_arr"
            android:layout_marginLeft="40dp"
            android:text="@string/txt_recharge_bank"
            android:textColor="@color/white"

            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_guide_bank_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@mipmap/rc_guide_jump"
            android:layout_below="@id/tv_guide_bank_arr"
            android:layout_alignLeft="@id/tv_guide_bank_arr"/>

        <ImageView
            android:id="@+id/iv_guide_bank_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop ="@id/iv_guide_bank_jump"
            android:layout_toRightOf  ="@id/iv_guide_bank_jump"
            android:background="@mipmap/rc_guide_next" />

    </RelativeLayout>


