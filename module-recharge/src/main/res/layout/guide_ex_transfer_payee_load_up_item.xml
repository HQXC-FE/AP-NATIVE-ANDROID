<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_guide_bank_arr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_guide_bank_arr"
            android:text="@string/txt_guide_ex_pay_sure1"
            android:textColor="@color/white"
            android:gravity="right"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/iv_guide_bank_arr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@mipmap/rc_guide_payee_up_left"
            android:visibility="invisible"
            />

        <!--上一步-->
        <ImageView
            android:id="@+id/iv_guide_bank_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="00dp"
            android:background="@mipmap/rc_guide_next"
            android:layout_below="@id/tv_guide_bank_arr"
            android:layout_marginLeft="70dp"
            android:layout_alignParentLeft="true"
            android:visibility="invisible"/>
        <!--跳过-->
        <ImageView
            android:id="@+id/iv_guide_bank_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/rc_guide_payee_up_left"
            android:layout_alignTop="@id/iv_guide_bank_pro"
            android:layout_toRightOf  ="@id/iv_guide_bank_pro"
            android:visibility="invisible"/>
<!--下一步-->
        <ImageView
            android:id="@+id/iv_guide_bank_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop ="@id/iv_guide_bank_jump"
            android:layout_alignRight   ="@id/tv_guide_bank_arr"
            android:background="@mipmap/rc_guide_next"
            android:visibility="invisible"/>

    </RelativeLayout>


</LinearLayout>