<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <variable
            name="model"
            type="com.xtree.recharge.ui.viewmodel.ExTransferViewModel" />

        <import type="com.xtree.base.utils.StringUtils" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            style="@style/style_rc_exp_bank_top"
            android:src="@mipmap/rc_exp_bank_step_2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivw_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/rc_exp_bank_rst_2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvw_time_left"
                style="@style/style_rc_exp_bank_status2"
                android:text="@{model.leftTimeData}"
                tools:text="剩余支付时间：29:25"
                app:layout_constraintBottom_toTopOf="@+id/tvw_time_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivw_01"
                app:layout_constraintTop_toTopOf="@id/ivw_01" />

            <TextView
                android:id="@+id/tvw_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@{model.deadlinesData}"
                android:textColor="@color/clr_grey_09"
                app:layout_constraintBottom_toBottomOf="@+id/ivw_01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvw_time_left"
                app:layout_constraintTop_toBottomOf="@id/tvw_time_left"
                tools:text="请于 2024-01-23  10:19:21 内完成支付" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View style="@style/style_dividing_line" />

        <TextView
            style="@style/style_rc_exp_bank_info_title"
            android:text="充值银行卡信息" />

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="订单号" />

            <TextView
                style="@style/style_rc_dlg_value"
                android:textColor="@color/clr_black"
                android:text="@{model.bankInfoData.merchantOrder}"
                tools:text="PAY00123456789" />
        </LinearLayout>

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="@string/txt_to_bank_name" />

            <TextView
                android:id="@+id/tvw_to_bank_name"
                style="@style/style_rc_dlg_value"
                android:text="@{model.bankInfoData.bankCode}"
                tools:text="XXX" />

            <TextView
                android:id="@+id/tvw_copy_bank_name"
                style="@style/style_rc_dlg_copy"
                android:text="@string/txt_copy"
                android:onClick="@{() -> StringUtils.copy(model.bankInfoData.bankCode)}"/>
        </LinearLayout>

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="@string/txt_to_bank_name_detail" />

            <TextView
                android:id="@+id/tvw_to_bank_name_detail"
                style="@style/style_rc_dlg_value"
                android:text="@{model.bankInfoData.bankArea}"
                tools:text="XXX" />

            <TextView
                android:id="@+id/tvw_copy_branch"
                style="@style/style_rc_dlg_copy"
                android:text="@string/txt_copy"
                android:onClick="@{() -> StringUtils.copy(model.bankInfoData.bankArea)}"/>
        </LinearLayout>

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="@string/txt_bank_acct_name" />

            <TextView
                android:id="@+id/tvw_bank_acct_name"
                style="@style/style_rc_dlg_value"
                android:text="@{model.bankInfoData.bankAccountName}"
                tools:text="XXX" />

            <TextView
                android:id="@+id/tvw_copy_acc_name"
                style="@style/style_rc_dlg_copy"
                android:text="@string/txt_copy"
                android:onClick="@{() -> StringUtils.copy(model.bankInfoData.bankAccountName)}"/>
        </LinearLayout>

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="@string/txt_bank_acct_card" />

            <TextView
                android:id="@+id/tvw_bank_acct_card"
                style="@style/style_rc_dlg_value"
                android:text="@{model.bankInfoData.bankAccount}"
                tools:text="XXX" />

            <TextView
                android:id="@+id/tvw_copy_acc_num"
                style="@style/style_rc_dlg_copy"
                android:text="@string/txt_copy"
                android:onClick="@{() -> StringUtils.copy(model.bankInfoData.bankAccount)}"/>
        </LinearLayout>

        <LinearLayout style="@style/style_rc_dlg_ll">

            <TextView
                style="@style/style_rc_dlg_key"
                android:text="@string/txt_bank_rc_amount" />

            <TextView
                android:id="@+id/tvw_money2"
                style="@style/style_rc_dlg_value"
                android:text="@{model.bankInfoData.payAmount}"
                tools:text="XXX" />

            <TextView
                android:id="@+id/tvw_copy_money2"
                style="@style/style_rc_dlg_copy"
                android:text="@string/txt_copy"
                android:onClick="@{() -> StringUtils.copy(model.bankInfoData.payAmount)}"/>
        </LinearLayout>

        <TextView
            style="@style/style_cm_tip_small_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/layout_margin"
            android:text="[转账金额务必与订单金额一致]"
            android:textColor="@color/clr_grey_09" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvw_left"
                style="@style/style_btn_short_cancel"
                android:text="@string/txt_cancel"
                android:onClick="@{() -> model.cancleOrder()}"/>

            <View
                android:layout_width="36dp"
                android:layout_height="1dp" />

            <TextView
                android:id="@+id/tvw_right"
                style="@style/style_btn_short"
                android:text="上传凭证"
                android:onClick="@{() -> model.toVoucher()}"/>
        </LinearLayout>

        <TextView
            style="@style/style_cm_tip_small_grey"
            android:layout_width="match_parent"
            android:drawableStart="@mipmap/cm_ic_hint_purple"
            android:drawablePadding="4dp"
            android:text="请转账成功后务必及时确认！否则可能造成延迟上分"
            android:textSize="12sp" />
    </LinearLayout>
</layout>