                <TextView
                    android:id="@+id/tvw_bank_acct_card"
                    style="@style/style_rc_dlg_value"
                    android:text="李浩" />

                <TextView
                    android:id="@+id/tvw_copy_acc_num"
                    style="@style/style_rc_dlg_copy"
                    android:text="@string/txt_copy" />
            </LinearLayout>

            <LinearLayout style="@style/style_rc_dlg_ll">

                <TextView
                    style="@style/style_rc_dlg_key"
                    android:text="@string/txt_bank_rc_amount" />

                <TextView
                    android:id="@+id/tvw_money2"
                    style="@style/style_rc_dlg_value"
                    android:text="100" />

                <TextView
                    android:id="@+id/tvw_copy_money2"
                    style="@style/style_rc_dlg_copy"
                    android:text="@string/txt_copy" />
            </LinearLayout>

            <TextView
                style="@style/style_cm_tip_small_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/layout_margin"
                android:text="[转账金额务必与订单金额一致]"
                android:textColor="@color/clr_grey_09" />
