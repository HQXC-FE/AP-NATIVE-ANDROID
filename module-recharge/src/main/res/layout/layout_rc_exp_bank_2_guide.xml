        <com.xtree.recharge.ui.widget.StepProgressView
            android:id="@+id/stepProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            app:activeColor="#A17DF5"
            app:activeDrawable="@drawable/rc_step_progress_circle"
            app:circleRadius="6dp"
            app:currentStep="2"
            app:defaultColor="#C6C6C6"
            app:horizontalPadding="40dp"
            app:lineWidth="2dp"
            app:stepCount="3"
            app:stepTexts="@array/step_texts"
            app:textSize="14sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivw_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/rc_exp_bank_rst_2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvw_time_left"
                style="@style/style_rc_exp_bank_status2"
                android:text="剩余支付时间：29:25"
                app:layout_constraintBottom_toTopOf="@+id/tvw_time_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivw_01"
                app:layout_constraintTop_toTopOf="@id/ivw_01"
                tools:text="剩余支付时间：29:25" />

            <TextView
                android:id="@+id/tvw_time_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="请于 2024-01-23  10:19:21 内完成支付"
                android:textColor="@color/clr_grey_09"
                app:layout_constraintBottom_toBottomOf="@+id/ivw_01"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvw_time_left"
                app:layout_constraintTop_toBottomOf="@id/tvw_time_left"
                tools:text="请于 2024-01-23  10:19:21 内完成支付" />

